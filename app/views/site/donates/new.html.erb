      <!--散捐-->
      <div class="benefactors-moy clearfix">
        <span class="pull-left">捐款金额</span>
        <input type="text" placeholder="其他金额" class="pull-left" name="amount" id="donate-amount"/>
        <span >元</span>
        <div class="pull-right">
          <ul class="ui-choose ui-choose-tab" id="amount-tab-default" style="display: none">
            <% Settings.amount_tabs.each do |a| %>
            <li class="cur amount_tab_cur" data-amount="<%= a %>"><%= number_to_currency a %> 元</li>
            <% end %>
          </ul>
          <% @donate_itmes.each do |d| %>
            <% if d.amount_tabs.count > 0 %>
            <ul class="ui-choose ui-choose-tab" id="amount-tab-<%= d.id %>">
            <% d.amount_tabs.each do |a| %>
              <li class="cur amount_tab_cur" data-amount="<%= a.amount %>"><%= number_to_currency a.amount %> 元 （<%= a.alias %>）</li>
