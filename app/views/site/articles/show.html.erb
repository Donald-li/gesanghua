  <div class="camps-detail">
  <div class="camps-body-detail border-b">
    <p><%= @article.title %></p>
    <p class="articles-time"><%= @article.author %> |  <%= @article.published_at.strftime("%Y年%m月%d日")%> </p>
    <div class="camps-bodys articles-cont">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <%= image_tag 'activity-detail.png' %>
          </div>
          <div class="swiper-slide">
            <%= image_tag 'activity-detail.png' %>
          </div>
          <div class="swiper-slide">
            <%= image_tag 'activity-detail.png' %>
          </div>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next">
          <span class="iconfont icon-arrow-left bul-icon-next"></span>
        </div>
        <div class="swiper-button-prev">
          <span class="iconfont icon-arrow-left bul-icon-prev"></span>
        </div>
      </div>
    </div>
    <p class="camps-cont-detail">
      <%= @article.content.html_safe %>
    </p>
    <div class="camps-share">
      <p>分享到：</p>
      <ol>


        <li class="row" style="padding: 30px 268px;">
          <div id="share-2"></div>
        </li>

      </ol>
    </div>
  </div>
  <div class="recommend">
    <p>推荐资讯</p>
    <div class="row recommend-cont">
      <% @recommend_articles.each do |recommend_article| %>
        <div class="col-md-4">
          <%= link_to article_path(recommend_article) do %>
            <div class="recommend-img">
              <%= image_tag recommend_article.image.try(:file).try(:url, :medium).to_s %>
            </div>
            <p class="gsh-cont-1"><%= recommend_article.author %> | <%= recommend_article.published_at.strftime("%Y年%m月%d日")%></p>
            <p class="gsh-cont-2"><%= recommend_article.title %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
    $('#share-2').share({
        sites: ['qzone', 'wechat', 'weibo', 'qq']
    });
    var mySwiper = new Swiper('.swiper-container', {
        slidesPerView: 'auto',
        centeredSlides: true,
        loop: true,
        autoplay: true,
        pagination: {
            el: '.swiper-pagination',
            clickable :true
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev'
        }
    });
</script>
