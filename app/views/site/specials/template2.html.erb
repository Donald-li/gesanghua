<div id="article">
  <div class="article-img">
    <%= image_tag @special.banner.try(:file).try(:url, :large).to_s %>
    <div></div>
  </div>
  <div class="article1-title">
    <button class="article-but cur">专题</button>
    <p class="article-font"><%= @special.name %></p>
    <p class="article-con read-more"><%= @special.describe.html_safe %></p>
  </div>
  <div class="article1-read-cont">
    <% if @text_news.present? %>
      <% if @text_news.first.present? %>
        <div class="border-r">
          <%= link_to article_path(@text_news.first) do %>
              <div class="ovrly"></div>
              <p class="gsh-cont-1"><%= @text_news.first.author %> | <%= @text_news.first.published_at.strftime("%Y年%m月%d日") %></p>
              <p class="gsh-cont-2"><%= @text_news.first.title %></p>
              <p class="gsh-cont-3"><%= @text_news.first.describe %></p>
          <% end %>
        </div>
      <% end %>
      <% if @text_news.second.present? %>
        <div class="border-r">
          <%= link_to article_path(@text_news.second) do %>
            <div class="ovrly" style="background: #bd47ee;"></div>
            <p class="gsh-cont-1"><%= @text_news.second.author %> | <%= @text_news.second.published_at.strftime("%Y年%m月%d日") %></p>
            <p class="gsh-cont-2"><%= @text_news.second.title %></p>
            <p class="gsh-cont-3"><%= @text_news.second.describe %></p>
          <% end %>
        </div>
      <% end %>
      <% if @text_news.third.present? %>
        <div>
          <%= link_to article_path(@text_news.third) do %>
            <div class="ovrly" style="background: #8b54e3;"></div>
            <p class="gsh-cont-1"><%= @text_news.third.author %> | <%= @text_news.third.published_at.strftime("%Y年%m月%d日") %></p>
            <p class="gsh-cont-2"><%= @text_news.third.title %></p>
            <p class="gsh-cont-3"><%= @text_news.third.describe %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="swiper-collaboration">
    <p>专题资讯</p>
  </div>
<div class="article1-read-swiper">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <% @image_news.each do |image_new| %>
      <div class="swiper-slide">
        <%= link_to article_path(image_new) do %>
          <div class="recommend-img">
            <%= image_tag image_new.image.try(:file).try(:url, :medium).to_s %>
          </div>
          <p class="gsh-cont-1"><%= image_new.author %> | <%= image_new.published_at.strftime("%Y年%m月%d日")%></p>
          <p class="gsh-cont-2"><%= image_new.title %></p>
        <% end %>
      </div>
      <% end %>
    </div>
    <div class="swiper-button-next">
      <span class="iconfont icon-arrow-left bul-icon-next"></span>
    </div>
    <div class="swiper-button-prev">
      <span class="iconfont icon-arrow-left bul-icon-prev"></span>
    </div>
  </div>
</div>
  <div class="camps-share " >
    <p style="margin: 30px auto 0 auto;">分享</p>
    <ol>
      <li  style="padding: 20px 268px 80px 268px;">
        <div id="share-2"></div>
      </li>

    </ol>
  </div>

</div>
<style>
  .article1-read-swiper .swiper-button-next, .swiper-button-prev {
    background-image: none;
    opacity: .5;
    width: 38px;
    height: 60px;
  }
  .article1-read-swiper .swiper-button-prev {
    left: 20px;
    top:25%;
  }
  .article1-read-swiper .swiper-button-next {
    right: 20px;
    top:25%;
  }
  .article1-read-swiper .bul-icon-next {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 11;
    color: #9e9e9e;
    width: 100%;
    height: 100%;
    font-size: 30px;
    text-align: center;
    transform: rotate(180deg);
    line-height: 100px;
  }
  .article1-read-swiper .bul-icon-prev {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 11;
    color: #9e9e9e;
    width: 100%;
    height: 100%;
    font-size: 30px;
    text-align: center;
    line-height: 100px;
  }
  .article1-read-swiper .swiper-button-next, .swiper-button-prev{
    border-radius: 100px 0 0 100px;
    width: 50px;
    height: 100px;
  }
</style>
<script>
    $('#share-2').share({
        sites: ['qzone', 'wechat', 'weibo', 'qq']
    });
    var swiper = new Swiper('.swiper-container', {
        slidesPerView: 'auto',
        spaceBetween: 30,
        freeMode: true,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        on: {
            slideChange: function(){
                if(this.isEnd){
                    this.navigation.$nextEl.css('display','none');
                }else{
                    this.navigation.$nextEl.css('display','block');
                }
                if(this.isBeginning){
                    this.navigation.$prevEl.css('display','none');
                }else{
                    this.navigation.$prevEl.css('display','block');
                }
            },
        }
    });
</script>
