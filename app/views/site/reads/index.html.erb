
<div id="project">
  <div class="project-head">
    <div class="project-img"></div>
    <%= image_tag @project.image.try(:file).try(:url, :tiny) %>
    <div class="project-cont">
      <p class="project-cont-tit"><%= @project.name %></p>
      <div class="project-cont-con "><%= @project.describe %></div>
      <div class="project-cont-but">
        <span>查看项目介绍</span>
        <span class="iconfont icon-arrow-right"></span>
      </div>
    </div>
  </div>
  <div class="project-body">
    <div class="project-body-t clearfix border-b">
      <p class="pull-left cur">当前共有 <%= @total %> 所学校在筹款</p>
      <div class="pull-right">
        <div class="input-group">
          <span class="iconfont icon-ico-search"></span>
          <input type="text" class="form-control" placeholder="搜索项目">
        </div>
      </div>
      <div class="pull-right pull-down">
        <ul class="project-ul">
          <li id="projectshow" class="cur">
            <span class="pull-left">分类</span>
            <span class="iconfont icon-arrowdown pull-right"></span>
            <ul class="project-nav-heide">
              <li class="cur">全部</li>
              <li class="cur">新书项目</li>
              <li class="cur">补书项目</li>
            </ul>
          </li>
        </ul>
      </div>

    </div>
    <div class="project-body-cont row">
      <% @applies.each do |apply|%>
        <div class="col-md-3 cur ">
          <div class="project-body-img">
            <%= image_tag apply.cover_image.try(:file).try(:url, :tiny) %>
          </div>
          <div class="project-body-cot border-b border-l border-r ">
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="60"
                   aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
              </div>
            </div>
            <div class="project-body-contn">
              <div>
                <p><span>￥<%= apply.surplus_money %></span></p>
                <p>还差</p>
              </div>
              <div class="border-l">
                <% if apply.whole? %>
                  <p><span><%= apply.bookshelves_done_count %></span>/<%= apply.bookshelves_count%></p>
                <% else %>
                  <p><span><%= apply.supplements_done_count %></span>/<%= apply.supplements_count%></p>
                <% end %>
                <p>进度</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= paginate @applies %>
    </div>

    </div>
  </div>
  <div class="project-foot">
    <span class="iconfont icon-arrow-left cur"></span>
    <span class="iconfont icon-arrow-right cur"></span>
  </div>

</div>
