<div class="camps-detail">
  <div class="camps-body-detail border-b">
    <p><%= @campaign.name %></p>
    <div class="camps-bodys">
      <div class="activity-detail-img">
        <%= image_tag @campaign.banner_url(:tiny) %>
      </div>
      <div class="activity-detail-cont">
        <div class="activity-detail-co">
          <span>时间</span>
          <p><%= @campaign.start_time.strftime("%Y年%m月%d日") %></p>
        </div>
        <!--<div class="activity-detail-co">-->
          <!--<span>地点</span>-->
          <!--<p>合肥“岭上花园”——官亭林海景区</p>-->
        <!--</div>-->
        <!--<div class="activity-detail-co">-->
          <!--<span>目标</span>-->
          <!--<p>为西部的孩子走出高原看世界募集善款</p>-->
        <!--</div>-->
        <!--<div class="activity-detail-co">-->
          <!--<span>里程</span>-->
          <!--<p>10公里</p>-->
        <!--</div>-->
        <div class="activity-detail-co">
          <span>费用</span>
          <p><%= @campaign.price %>元/人</p>
        </div>
      </div>
      <button class="activity-detail-but activity-color-but-1">立即报名</button>
    </div>
    <div class="camps-cont-detail">
      <%= @campaign.content.html_safe %>
    </div>
    <div class="camps-share">
      <p>分享到：</p>
      <ol>
        <li class="row" style="padding: 30px 268px;">
          <div id="share-2"></div>
        </li>
      </ol>
    </div>
  </div>
 <div class="recommend">
   <p>推荐活动</p>
   <div class="row recommend-cont">
     <% @recommends.each do |recommend| %>
     <div class="col-md-4">
       <div class="recommend-img">
         <%= image_tag recommend.banner_url(:tiny) %>
       </div>
       <%= link_to campaign_path(recommend.id) do %>
         <p class="gsh-cont-1"><%= recommend.start_time.strftime("%Y年%m月%d日") %></p>
         <p class="gsh-cont-2"><%= recommend.name %></p>
       <% end %>
     </div>
     <% end %>
   </div>
 </div>
  <div class="overspread-5 " id="cmapaigns-e">
    <div class="overspread-over"></div>
    <div class="overspread-cont">
      <div class="clearfix">
        <div class="pull-left mys-1">活动报名</div>
        <div class="pull-right iconfont icon-icondelete cur overspread-but"></div>
      </div>

      <div class="overspread-co" id="cmapaigns-but">
        <p>活动费用：<span>￥120.00/人</span></p>
        <div>
          <p class="goodtext">联系人</p>
          <input type="text" name="classname" />
        </div>
        <div>
          <p class="goodtext">联系电话</p>
          <input type="text" name="student_number" />
        </div>
        <div>
        <span class="goodtext">参与人数</span>
        <div class="modified modified-1 goods-project-input">
        <span class="iconfont icon-ico-reduce oversmin"></span>
        <input type="text" name="project_season_apply[student_number]" value="1" class="oversinputs" />
        <span class="iconfont icon-ico-add1 oversadd"></span>
        </div>
        </div>
        <div>
          <p class="goodtext">备注</p>
          <textarea required placeholder="格式为:男 XL 1件；女S 1件"></textarea>
        </div>

      </div>
      <div style="text-align: center;">
        <button class="overspreadsc-but overspread-but  over-but">支付</button>
      </div>


    </div>
  </div>
</div>
<script>
    $('#cmapaigns-e').overs(".activity-color-but-1");
    $('#share-2').share({
        sites: ['qzone', 'wechat', 'weibo', 'qq']
    });
</script>
