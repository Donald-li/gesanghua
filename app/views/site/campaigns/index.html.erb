        search: false,
        autoSelected: false,
        code: 'cityCode',
        level: 1
    });
    $("#citys").select({
        width: "250px"
    });
    $("#allcamps").select({
        width: "250px"
    });
    $("#campstype").select({
        width: "250px"
    });

</script>