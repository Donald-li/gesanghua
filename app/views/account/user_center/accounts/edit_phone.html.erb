<script type="text/javascript" charset="utf-8">
    var wait = 59;

    function time(o) {
        if (wait == 0) {
            o.removeAttribute("disabled");
            o.innerHTML = "获取验证码";
            wait = 59;
        } else { // www.jbxue.com
            o.setAttribute("disabled", true);
            o.innerHTML = wait + "秒";
            wait--;
            setTimeout(function () {
                    time(o)
                },
                1000)
        }
    }

    document.getElementById("btn").onclick = function () {
        var _this = this
        var mobile = $('#mobile').val()
        if (mobile.length > 0) {
            $.ajax({
                type: "post",
                url: "/api/v1/common/sms_codes",
                data: {kind: 'signup', mobile: mobile},
                success: function (data) {
//                    layer.msg(data.message, {
//                        icon: 0,
//                        offset: 't c'
//                    });
                    time(_this);
                },
                error: function (data) {
                    layer.msg(data.message, {
                        icon: 2,
                        offset: 't c'
                    });
                }
            })
        } else {
            layer.msg('请输入手机号码', {
                icon: 2,
                offset: 't c'
            });
        }

    }
</script>
