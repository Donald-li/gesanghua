<div id="first-screen" class="first-screen">
  <div class="screen-body">
    <div class="screen-body-cell">
      <div class="auto-box cell-wrap">
        <div class="login-box">
          <div class="login-header">用户注册</div>
          <div class="login-body">
            <%= simple_form_for [:user, @user], url: account_registration_path, wrapper: :admin_form, html: {'data-parsley-validate': true} do |f| %>
              <%= f.error_notification %>
              <div class="form-body">
                <%= f.input :login, label: '登录账号', autofocus: true, placeholder: '请输入手机号码' %>
                <div class="form-group user_rucaptcha yzm">
                  <label class="col-md-2 control-label">短信验证码</label>
                  <div class="col-md-8">
                    <input class="form-control" id="code" name="code" type="text" placeholder="输入验证码">
                  </div>
                  <div class="col-md-4">
                    <button id="send_code" type="button" class="btn btn-primary-line btn-block" onclick="sendSms('verify_profile', $('#organization_login').val());">获取验证码</button>
                  </div>
                </div>
                <%= f.input :password, label: '输入密码', placeholder: '请输入登录密码' %>
                <%#= f.input :password_confirmation, label: '确认密码', placeholder: '重新输入一次密码' %>
                <div class="help-disc">
                </div>
              </div>
              <div class="login-btn-wrap">
                <%= f.button :submit, '注册账号', class: 'btn btn-danger btn-lg' %>
              </div>
            <% end %>
            <%= javascript_include_tag 'global/sms', 'data-turbolinks-track': 'reload' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .footer {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
  }
</style>
<script type="text/javascript" charset="utf-8">
  $(function () {
    setHeight();
  });
  $(window).resize(function () {
    setHeight();
  });
  function setHeight() {
    var windowHeight = $(window).height();
    $('#first-screen').css('height', windowHeight + 'px');
  }
</script>
