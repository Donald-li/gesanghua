<div class="person-body-right pull-right">
  <!--我的捐助-->
  <div >

    <div class="don-title border-b  clearfix">
      <span class="pull-left">我的活动</span>

    </div>
    <div>
      <% if @camapigns.present? %>

          <div class="donation-active clearfix ">
            <% @camapigns.each do |cam| %>
                <%= link_to campaign_path(cam) do %>
                    <div class="donation-active-cont">
                      <div>
                        <%= image_tag cam.banner_url(:tiny) %>
                      </div>

                      <div class="camps-body-conts">
                        <p class="redundance camps-cont-1"><%= cam.name %></p>
                        <p>￥<%= cam.price %>/人</p>
                        <p>报名截止<%= cam.sign_up_end_time.strftime("%Y年%m月%d日") %></p>
                      </div>
                    </div>
                <% end %>

            <% end %>
          </div>
          <div class="project-foot">
            <%= paginate @camapigns, theme: 'tiny' %>
          </div>
      <% else %>
          <div class="donation-cont-no">
            <div class="donation-co-no-c">
              <div class="donation-co-no-c-img">
                <%= image_tag 'ucenter-campaign.png' %>
              </div>

              <p>您还未参与任何活动</p>
            </div>
          </div>
      <% end %>
    </div>
  </div>

</div>
