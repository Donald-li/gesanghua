<% content_for :scripts do %>
  <%= javascript_include_tag "controllers/orders/tab", "controllers/orders/index" %>
<% end %>
<% content_for :styles do %>
  <%= stylesheet_link_tag "controllers/orders/index" %>
<% end %>

<div class="person-body-right pull-right">
  <!--我的捐助-->
  <div style="display: block;">
    <ul class="donations clearfix">
      <li class="selectedDon cur">
        <%= link_to '我的捐助', account_orders_path %>
      </li>
      <li class="cur">
        <%= link_to '我的结对', account_pairs_path %>
      </li>
      <li class="cur">
        <%= link_to '我的图书角', account_bookshelves_path %>
      </li>
    </ul>
    <!--我的捐助-->
    <div class="donation " style="display: block;">
        <div class=" donations-1 swiper-container " url="<%= select_tab_account_orders_path %>">
          <div class="donations1  swiper-wrapper panel-tabs" url="<%= select_tab_account_orders_path %>">
            <div class="selectedDo swiper-slide cur" info="0" url="<%= select_tab_account_orders_path %>">全部项目
              <div class="bottomline"></div></div>
            <% @projects.each do |project| %>
                <div class="cur border-l swiper-slide" info="<%= project.id %>" url="<%= select_tab_account_orders_path(project.id) %>"><%= project.name %>
                  <div class=""></div>
                </div>
            <% end %>
          </div>
          <div class="swiper-button-next">
            <span class="iconfont icon-arrowdown bul-icon-next"></span>
          </div>
          <div class="swiper-button-prev">
            <span class="iconfont icon-arrowdown bul-icon-prev"></span>
          </div>
          </div>
      </div>
    <% if @donate_records.present? %>
      <div class="panel-body">
        <div class="tab-content">
          <div class="tab-pane active" id="data_list">
            <%= render partial: "info" %>
          </div>
        </div>
      </div>
        <% else %>
      <div class="donation-cont-no">
        <div class="donation-co-no-c">
          <p>您还未捐助过任何公益项目! </p>
          <p>马上参与捐助，帮助西部孩子 健康成长吧~</p>
        </div>
        <%= link_to new_donate_path do %>
        <button class="donation-co-no-but">去捐助</button>
        <% end %>
      </div>
        <% end %>
    </div>
  </div>

</div>
<style>
  .bul-icon-next {
    position: absolute;
    left: 0;
    top: 7px;
    z-index: 11;
    color: #8b54e3;
    width: 100%;
    height: 100%;
    font-size: 22px;
    text-align: center;
    transform: rotate(270deg);
    line-height: 18px;
  }
  .bul-icon-prev {
    position: absolute;
    left: 0;
    top: -5px;
    z-index: 11;
    color: #8b54e3;
    width: 100%;
    height: 100%;
    font-size: 22px;
    text-align: center;
    transform: rotate(90deg);
    line-height: 18px;
  }
  .swiper-button-prev, .swiper-container-rtl .swiper-button-next{
    background-color: inherit;
    opacity: 1;
  }
  .swiper-button-next, .swiper-container-rtl .swiper-button-next{
    background-color: inherit;
    opacity: 1;
  }
  .donation .swiper-container {
    width: 66%;
    height: 100%;
    margin: 0 ;
  }
  .donation .swiper-button-prev, .swiper-container-rtl .swiper-button-next{
    background-image: none;
    right: 16px;
    left: auto;
  }
  .donation .swiper-button-next, .swiper-container-rtl .swiper-button-prev{
    background-image: none;
    right: 0;
    left: auto;
  }
  .donation .swiper-button-next, .swiper-button-prev{
    width: 10px;
    height: 18px;
    margin-top: -5px;
  }
  .donation .swiper-slide {
    text-align: center;
    background: #fff;
    width: 103px;
    height: 16px;
    line-height: 16px;
    font-size: 14px;
    color: #3d3d40;
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
  }

</style>

<script>
  $(function(){
      var swiper = new Swiper('.swiper-container', {
          slidesPerView: 'auto',
          pagination: {
              el: '.swiper-pagination',
              clickable: true,
          },
          slidesPerGroup: 5,
          navigation: {
              nextEl: '.swiper-button-next',
              prevEl: '.swiper-button-prev',
          },
      });
      $(".donations1 > .swiper-slide").on("click", function () {
          $(".donations1 > .swiper-slide").removeClass("selectedDo")
          $(this).addClass("selectedDo")
          $(".bottomline").css("left", parseFloat($(this)[0].offsetLeft) + 33 +"px")

      })
  })

</script>
