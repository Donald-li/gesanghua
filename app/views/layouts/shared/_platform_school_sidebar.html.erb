<div class="person-body-left pull-left">
  <ul>
    <% projects = current_user.manage_projects.visible.sorted %>
    <% if projects.present? %>
    <% project = projects.first %>
    <% url = project.goods? ? platform_school_apply_pairs_path(pid: project) : url_for(controller: "platform/school/apply/#{project.alias.pluralize}", action: :index) %>
    <%= link_to url do %>
    <li class="<%= display_menu(["pairs","reads","goods_projects","goods","camps","movie_cares","movies"]) %> cur">
      <span class="iconfont icon-ico-team"></span>
      <span>项目管理</span>
    </li>
    <% end %>
    <% end %>
    <%= link_to platform_school_teachers_path do %>
    <li class="<%= display_menu("teachers") %> cur">
      <span class="iconfont icon-ico-month"></span>
      <span>教师管理</span>
    </li>
    <% end %>
    <%= link_to platform_school_feedbacks_path do %>
    <li class="<%= display_menu("feedbacks") %> cur">
      <span class="iconfont icon-ico-campaign"></span>
      <span>定期反馈</span>
    </li>
    <% end %>
    <%= link_to edit_platform_school_profile_path do %>
    <li class="<%= display_menu("profiles") %> cur">
      <span class="iconfont icon-ico-info"></span>
      <span>学校资料</span>
    </li>
    <% end %>
  </ul>
  <div class="leftLine"></div>
  <div  class="border-t" >
    <%= link_to account_orders_path do %>
      <span class="iconfont icon-rollback"></span>
      <span>返回个人中心</span>
    <% end %>
  </div>
</div>

