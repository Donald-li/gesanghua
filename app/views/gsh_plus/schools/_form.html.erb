<%= simple_form_for [:gsh_plus, @school], url: @school.new_record? ? gsh_plus_schools_path(@school) : gsh_plus_school_path(@school), html: {'data-parsley-validate': true, class: ''} do |f| %>
<div class="school-apply-list-cont marginbottom" style="border-top:none; ">
  <div class="school-a-l-con">
    <p class="don-title">学校信息</p>
    <div class="addchild-list-cont">
      <div class="clearfix">
        <span class="goodtext pull-left">学校全称</span>
        <input class="goodinput pull-left" type="text" name="school[name]" value="<%= @school.name %>" required />
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">选择地区</span>
        <div class="city-group pull-left">
          <%= select_tag 'school[province]', options_for_select(ChinaCity.list, @school.province.presence), prompt: '省份', class: "city-select", id: 'province' %>
          <%= select_tag 'school[city]', options_for_select(ChinaCity.list(@school.province.to_s), @school.city.presence), prompt: '城市', class: "city-select", id: 'city' %>
          <%= select_tag 'school[district]', options_for_select(ChinaCity.list(@school.city.to_s), @school.district.presence), prompt: '地区', class: "city-select", id: 'district' %>
        </div>
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">通讯地址</span>
        <input class="goodinput pull-left" type="text" name="school[address]" value="<%= @school.address %>" required/>
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">邮政编码</span>
        <input class="goodinput pull-left" type="text" name="school[postcode]" value="<%= @school.postcode %>" required/>
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">学生人数</span>
        <div class="pull-left">
          <input class="goodinput " type="number" name="school[number]" value="<%= @school.number %>" required data-parsley-type="integer" min="0"  data-parsley-required="true" data-parsley-errors-container= "#studentnum"/>
          <span class="income-moy">人</span>
        </div>
        <div id="studentnum"></div>
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">教师人数</span>
        <div class="pull-left">
          <input class="goodinput " type="number" name="school[teacher_count]" value="<%= @school.teacher_count %>" required data-parsley-type="integer" min="0"  data-parsley-required="true" data-parsley-errors-container= "#teachernum"/>
          <span class="income-moy">人</span>
        </div>
        <div id="teachernum"></div>
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">后勤人数</span>
        <div class="pull-left">
          <input class="goodinput " type="number" name="school[logistic_count]" value="<%= @school.logistic_count %>" required data-parsley-type="integer" min="0"  data-parsley-required="true" data-parsley-errors-container= "#logisticsnum"/>
          <span class="income-moy">人</span>
        </div>
        <div id="logisticsnum"></div>
      </div>
      <div style="height: 100%;" class="clearfix">
        <span class="goodtext pull-left">学校简介</span>
        <textarea class="pull-left" name="school[describe]" required ><%= @school.describe %></textarea>
      </div>

    </div>
  </div>
</div>
<div class="school-apply-list-cont">
  <div class="school-a-l-con">
    <p class="don-title">学校负责人信息</p>
    <div class="addchild-list-cont">
      <div class="clearfix">
        <span class="goodtext pull-left">姓名</span>
        <input class="goodinput pull-left" type="text" name="school[contact_name]" value="<%= @school.contact_name %>" required/>
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">身份证号</span>
        <input class="goodinput pull-left" type="text" name="school[contact_id_card]" value="<%= @school.contact_id_card %>" required data-parsley-shenfen/>
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">手机号码</span>
        <input class="goodinput pull-left" type="text" name="school[contact_phone]" value="<%= @school.contact_phone %>" required data-parsley-phone/>
      </div>
      <div class="clearfix">
        <span class="goodtext pull-left">办公电话</span>
        <input class="goodinput pull-left" type="text" name="school[contact_telephone]" value="<%= @school.contact_telephone %>" data-parsley-telephone/>
      </div>
      <div  class="school-list-picture clearfix">
        <span class="goodtext pull-left">上传图片</span>
        <div class="pull-left">
          <div class="addchild-list-up-picture pull-left">
            <p class="iconfont icon-ico-add"></p>
            <p></p>
            <%= webuploader_image :card_image_id, label: '上传手持身份证', type: 'school_card_image', asset: @school.card_image, klass: 'single', id: 'school-card' %>
          </div>
          <div class="addchild-list-up-picture pull-left">
            <p class="iconfont icon-ico-add"></p>
            <p></p>
            <%= webuploader_image :certificate_image_id, label: '上传学校证明', type: 'school_certificate_image', asset: @school.certificate_image, klass: 'single', id: 'school-certificate' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="childern-submint">
  <button type="submit">提交审核</button>
  <button>取消</button>
</div>
<% end %>
</div>
<script>
    $("#province").select2({
        width: "120px",
        minimumResultsForSearch: -1
    });
    $("#city").select2({
        width: "130px",
        minimumResultsForSearch: -1
    });
    $("#district").select2({
        width: "128px",
        minimumResultsForSearch: -1
    });
  initImageWebuploader($('#school-card'));
  initImageWebuploader($('#school-certificate'));
</script>
