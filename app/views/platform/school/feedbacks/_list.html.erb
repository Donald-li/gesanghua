<% if @projects.present? %>
  <div class="school-feedback">
    <div class="donation-cont ">
      <% @projects.each do |project| %>
        <div class="clearfix border-b">
          <div class="donation-cont-img pull-left">
            <%= image_tag project.image_url(:tiny) %>
          </div>
          <div class="pull-left feedback-cont-cco">
            <div class="feedback-cont-c-tit clearfix">
              <p class="pull-left"><%= project.name %>项目定期反馈</p>
            </div>
          </div>
          <%= link_to platform_school_feedback_path(project) do %>
            <button class="donation-cont-but pull-right cur">
              查看项目反馈
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="project-foot">
    <%= paginate @projects, theme: :tiny, remote: true %>
  </div>
<% else %>
  <div class="donation-cont-no">
    <div class="donation-co-no-c">
      <p>暂无定期反馈</p>
    </div>
  </div>
<% end %>
