<div class="person-body-right pull-right">
  <div class="school-apply-pair-table-co">
    <div class="school-apply-pair-table">
      <p>班级名称</p>
      <p>状态</p>
      <p>操作</p>
    </div>
    <% @bookshelves.each do |bookshelf| %>
        <div class="school-apply-pair-tables">
          <div class="school-apply-pair-table-cont">
            <div>
              <p class="school-apply-pair-tit"><%= bookshelf.classname %></p>
               <p class="school-apply-pair-f">图书角编号：<%= bookshelf.bookshelf_no %></p>
              <% if bookshelf.raising? %>
                <p class="school-apply-pair-f">目标筹款/累计：<%= bookshelf.target_amount %>元/<%= bookshelf.present_amount %>元</p>
              <% else %>
                <p class="school-apply-pair-f">筹款总额：<%= bookshelf.target_amount %>元</p>
              <% end %>
            </div>
            <div class="border-l border-r">
              <%= bookshelf.enum_name(:state) %>
            </div>
            <div>
              <% if bookshelf.to_receive? %>
              <button><%= link_to '查看物流', bookshelf.logistic.qurey_result, target: 'new' %></button>
              <button><%= link_to '确认收货', new_platform_school_apply_receive_feedback_path(bookshelf_id: bookshelf.id) %></button>
              <% end %>
              <% if bookshelf.to_feedback? %>
              <button><%= link_to '安装/发放反馈', new_platform_school_apply_install_feedback_path(bookshelf_id: bookshelf.id) %></button>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
<script>
    // //图片展示
    $('[data-magnify]').magnify({
        headToolbar: [
            'close'
        ],
        initMaximized: true
    });
    $('.plat-school-apply-pair').eq(0).removeClass('border-t')
</script>
