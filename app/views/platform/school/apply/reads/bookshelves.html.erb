<div class="person-body-right pull-right">
  <div class="project-list-table-co">
    <table class="project-list-table" >
      <thead>
        <tr>
          <th scope="col" class="table-tit-1">班级名称</th>
          <th scope="col" class="table-tit-2">状态</th>
          <th scope="col" class="table-tit-3">操作</th>
        </tr>
      </thead>
      <tbody>
            <% @bookshelves.each do |bookshelf| %>
          <tr class="notable">
            <td colspan="3"></td>
          </tr>
          <tr class="school-apply-pair-table-cont ">
            <th style="padding: 20px;">
              <div>
                <p class="school-apply-pair-tit"><%= bookshelf.classname %></p>
                 <p class="school-apply-pair-f">图书角编号：<%= bookshelf.bookshelf_no %></p>
                <% if bookshelf.raising? %>
                  <p class="school-apply-pair-f">目标筹款/累计：<%= bookshelf.target_amount %>元/<%= bookshelf.present_amount %>元</p>
                <% else %>
                  <p class="school-apply-pair-f">筹款总额：<%= bookshelf.target_amount %>元</p>
                <% end %>
              </div>
            </th>
            <td class="apply-tables-2 ">
              <%= bookshelf.state_name %>
            </td>
            <td>
              <% if bookshelf.to_receive? %>
              <%= link_to '查看物流', bookshelf.logistic.qurey_result, target: 'new', class:'lookapply' %>
             <%= link_to '确认收货', new_platform_school_apply_receive_feedback_path(bookshelf_id: bookshelf.id), class:'lookbutton' %>
              <% end %>
              <% if bookshelf.to_feedback? %>
              <%= link_to '安装/发放反馈', new_platform_school_apply_install_feedback_path(bookshelf_id: bookshelf.id), class:'lookbutton' %>
              <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
    // //图片展示
    $('[data-magnify]').magnify({
        headToolbar: [
            'close'
        ],
        initMaximized: true
    });
    $('.plat-school-apply-pair').eq(0).removeClass('border-t')
</script>
