        search: false,
        autoSelected: false,
        code: 'cityCode',
        level: 3
    });
    $("#allcamps").select({
        width: "452px"
    });
    $("#province").select({
        width: "148px"
    });
    $("#city").select({
        width: "148px"
    });
    $("#district").select({
        width: "148px"
    });
    $('.modified-1').calculate()
    $('.modified-2').calculate()
    $('.overspread-e').overs(".edit-offline-user");
    $('.overspread-n').overs(".addnewclass");

    $(function () {
        initMultiImageWebuploader($('#images'));
    })

</script>