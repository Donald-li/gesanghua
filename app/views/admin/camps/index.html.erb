<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>分站管理
    </div>
    <div class="actions">
      <%= link_to new_admin_camp_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_camps_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :name_cont, '名称' %>
            <%= f.text_field :name_cont, class: 'form-control gsh-input-share', placeholder: '名称' %>
          </div>
          <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                探索营名称
              </th>
              <th>
                所在地区
              </th>
              <th>
                负责人
              </th>
              <th>
                财务分类
              </th>
              <th>
                状态
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @camps.each do |cate| %>
            <tr>
              <td>
                <%= cate.name %>
              </td>
              <td>
                <%= cate.simple_address %>
              </td>
              <td>
                <%= cate.manager %>
              </td>
              <td>
                <%= cate.fund.try(:name) %>
              </td>
              <td>
                <%= cate.enum_name(:state) %>
              </td>
              <td>
                <%= link_to admin_camp_camp_users_path(cate), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                    <i class="fa fa-edit"></i> 管理账号
                <% end %>
                <%= link_to edit_admin_camp_path(cate), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 修改
                <% end %>
                <%= link_to admin_camp_path(cate), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                   <i class="fa fa-trash-o"></i> 删除
               <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@camps) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @camps, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
