<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i><%= link_to @apply.name, admin_goods_projects_path %> > 捐助记录
    </div>
    <div class="actions">
      <% if @apply.raising? %>
      <%= link_to new_admin_goods_project_goods_donate_record_path(@apply), class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
        <i class="icon-plus"></i>
        <span>新增筹款</span>
      <% end %>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_goods_project_goods_donate_records_path(@apply), class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label '捐助时间' %>
            <%= f.text_field :created_at_gteq, class: 'form-control datepicker gsh-input-share-l', placeholder: '开始时间' %>
            <%= f.text_field :created_at_lteq, class: 'form-control datepicker gsh-input-share-r', placeholder: '结束时间' %>
          </div>
          <button type="submit" class="btn btn-default grey">查询</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                ID
              </th>
              <th>
                受捐项目
              </th>
              <th>
                捐款人
              </th>
              <th>
                代捐人/汇款人
              </th>
              <th>
                捐助时间
              </th>
              <th>
                捐助金额
              </th>
              <th>
                账户
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @donate_records.each do |record| %>
            <tr>
              <td>
                <%= record.id %>
              </td>
              <td>
                <%= record.season.name %>
              </td>
              <td>
                <%= record.donor.try(:admin_show_name) %> ( <%= record.donor.try(:phone) %> )
              </td>
              <td>
                <%= record.agent_name %>
              </td>
              <td>
                <%= l record.created_at %>
              </td>
              <td>
                <%= format_money record.amount %>
              </td>
              <td>
                <%= record.income_record.income_source.try(:name) if record.income_record.present? %>
              </td>
              <td>
                <%= link_to admin_goods_project_goods_donate_record_path(@apply, record), class: 'btn btn-xs yellow' do %>
                  <i class="fa fa-file"></i> 查看详情
                <% end %>
                <% if false #record.platform_donate? %>
                <%= link_to admin_goods_project_goods_donate_record_path(@apply, record), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                  <i class="fa fa-trash-o"></i> 删除
                <% end %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@donate_records) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @donate_records, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
