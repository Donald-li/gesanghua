<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>团队捐助统计
    </div>
    <div class="actions">
      <%= link_to excel_output_admin_donate_statistic_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="fa fa-download"></i>
          <span>导出</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable dropdown-select">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              团队ID
            </th>
            <th>
              名称
            </th>
            <th>
              成员数
            </th>
            <th>
              累计捐助
            </th>
            <th>
              成员劝捐
            </th>
          </tr>
          </thead>
          <tbody>
          <% @team_statistics.each do |team| %>
              <tr>
                <td><%= team.id %></td>
                <td><%= team.name %></td>
                <td><%= team.member_count %></td>
                <td>￥<%= team.total_donate_amount %></td>
                <td>￥<%= team.users.sum(:promoter_amount_count) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@team_statistics) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @team_statistics, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
