<%= simple_form_for [:admin, DonateRecord.new], url: url, method: :post, wrapper: :admin_form, html: {id: 'approve-form', 'data-parsley-validate': true} do |f| %>
  <%= f.error_notification %>
  <div class="form-body form-horizontal">
    <div class="form-group radio_buttons required donate_record_donate_way">
      <label class="col-md-2 control-label">捐助方式：</label>
      <div class="col-md-9 form-inline">
        <label><input type="radio" class="form-control radio_buttons donate_way" name="donate_way" value="offline" checked onclick="toggleState()">线下汇款</label>
        <label><input type="radio" class="form-control radio_buttons donate_way" name="donate_way" value="match" onclick="toggleState()">使用其他资金</label>
        <label><input type="radio" class="form-control radio_buttons donate_way" name="donate_way" value="balance" onclick="toggleState()">使用用户余额</label>
      </div>
    </div>
    <% if @child_apply %>
    <div class="form-group">
      <label class="col-md-2 control-label">可配捐年度：</label>
      <div class="col-sm-9">
          <% @child_apply.gsh_child_grants.pending.sorted.each do |grant| %>
            <span class="btn btn-xs green"><%= grant.title %></span>
          <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">配捐年度数量：</label>
      <div class="col-sm-9">
        <input class="statistic-form-input" type="number" name="grant_number" min="1" max="<%= @child_apply.gsh_child_grants.pending.count %>" required>
        * 会自动按照学年顺序配捐
      </div>
    </div>
    <% end %>
    <div class="offline">
      <div class="form-group">
        <label class="col-md-2 control-label">捐款渠道：</label>
        <div class="col-sm-9">
          <%= select_tag :source_id, options_for_select(IncomeSource.all.map{|s|[s.name, s.id]}), include_blank: true, class: 'form-control select optional select-two' %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label">线下捐款：</label>
        <div class="col-sm-9">
          <select class="form-control select optional users-ajax" name="offline_record_id" required></select>
        </div>
      </div>
    </div>
    <div class="match">
      <div class="form-group">
        <label class="col-md-2 control-label">财务分类：</label>
        <div class="col-sm-9">
          <select class="form-control select optional select-two" style="width:400px;" name="match_fund_id" required>
            <% Fund.unrestricted.sorted.each do |fc| %>
              <option value="<%= fc.id %>"><%= "#{fc.fund_category.name}#{fc.name}(余额：#{fc.amount})" %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>
    <div class="balance">
      <div class="form-group">
        <label class="col-md-2 control-label">使用余额：</label>
        <div class="col-sm-9">
          <select class="form-control select optional users-balance-ajax" style="width:400px;" name="balance_id" required></select>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <div class="row">
        <div class="col-md-offset-3 col-md-9">
          <%= f.button :submit, '提交', class: 'btn green' %>
          <%= link_to '取消', back_url, class: 'btn' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
    function toggleState() {
        toggleRadioInput('.donate_way', {
            offline: '.offline',
            match: '.match',
            balance: '.balance'
        })
    }

    $(function () {
        // 异步加载用户列表
        $('.users-ajax').select2({
            language: "zh-CN",
            placeholder: '选择线下捐款',
            allowClear: true,
            ajax: {
                url: "/selects/income_records",
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        q: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;
                    return {
                        results: $.map(data.items, function (item) {
                            return {
                                text: item.name,
                                id: item.id
                            }
                        }),
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    };
                },
                cache: true
            }
        })
    })

    $(function () {
        $('.users-balance-ajax').select2({
            language: "zh-CN",
            placeholder: '选择用户余额',
            allowClear: true,
            ajax: {
                url: "/selects/users_balance",
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        q: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;
                    return {
                        results: $.map(data.items, function (item) {
                            return {
                                text: item.user_balance,
                                id: item.id
                            }
                        }),
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    };
                },
                cache: true
            }
        })
        $(".select-two").select2();
    })

    toggleState();

</script>
