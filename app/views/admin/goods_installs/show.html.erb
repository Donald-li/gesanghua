
<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-sliders font-dark"></i>
      <span class="caption-subject font-dark bold uppercase"><%= link_to @install.owner.name, admin_goods_projects_path %> > 安装发放反馈详情</span>
    </div>
    <div class="actions">
      <div class="btn-group">
        <a href="<%= admin_goods_projects_path %>" class="btn btn-xs blue">
          <i class="fa fa-reply"></i>返回
        </a>
      </div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-bordered table-hover">
        <tbody>
        <tr>
          <td>
            申请编号
          </td>
          <td>
            <%= @install.owner.apply_no %>
          </td>
        </tr>
        <tr>
          <td>
            项目名称
          </td>
          <td>
            <%= @install.owner.name %>
          </td>
        </tr>
        <tr>
          <td>
            反馈人
          </td>
          <td>
            <%= @install.user.try(:name) %>
          </td>
        </tr>
        <tr>
          <td>
            反馈时间
          </td>
          <td>
            <%= l @install.created_at %>
          </td>
        </tr>
        <tr>
          <td>
            反馈内容
          </td>
          <td>
            <%= @install.content.html_safe %><br/>
            <% @install.images.each do |img| %>
              <%= image_tag img.try(:file).try(:url, :tiny).to_s %>
            <% end %>
          </td>
        </tr>
        </tbody>

      </table>
    </div>
  </div>
</div>
