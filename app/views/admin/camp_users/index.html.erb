<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i><%= link_to @camp.name, admin_camps_path %> > 管理账号
    </div>
    <div class="actions">
      <%= link_to new_admin_camp_camp_user_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_camp_camp_users_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :name_cont, '姓名' %>
            <%= f.text_field :name_cont, class: 'form-control', placeholder: '姓名' %>
          </div>
          <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                昵称
              </th>
              <th>
                姓名
              </th>
              <th>
                手机号
              </th>
              <th>
                状态
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @camp_users.each do |user| %>
            <tr>
              <td>
                <%= user.nickname %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= user.phone %>
              </td>
              <td>
                <%= user.enum_name(:state) %>
              </td>
              <td>
                <%= link_to edit_admin_camp_camp_user_path(@camp, user), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 修改
                <% end %>
                <% if @camp.users.count > 1 %>
                <%= link_to admin_camp_camp_user_path(@camp, user), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                   <i class="fa fa-trash-o"></i> 删除
               <% end %>
               <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@camp_users) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @camp_users, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
