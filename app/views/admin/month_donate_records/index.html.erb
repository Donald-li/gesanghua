<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>月捐捐助记录
    </div>
    <div class="actions">
      <%= link_to admin_month_donates_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
      <span>返回列表</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_month_donate_month_donate_records_path(@month_donate), class: 'form-inline' do |f| %>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                月捐编号
              </th>
              <th>
                捐助人
              </th>
              <th>
                捐助人手机
              </th>
              <th>
                捐助项目
              </th>
              <th>
                期数
              </th>
              <th>
                金额
              </th>
            </tr>
          </thead>
          <tbody>
            <% @donate_records.each do |donate_record| %>
            <tr>
              <td>
                <%= donate_record.month_donate.try(:id) %>
              </td>
              <td>
                <%= donate_record.month_donate.user.try(:name) %>
              </td>
              <td>
                <%= donate_record.month_donate.user.try(:phone) %>
              </td>
              <td>
                <%= donate_record.month_donate.fund.fund_category.try(:name) %>
              </td>
              <td>
                <%= donate_record.period %>
              </td>
              <td>
                <%= donate_record.amount %>元
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@donate_records) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @donate_records, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
