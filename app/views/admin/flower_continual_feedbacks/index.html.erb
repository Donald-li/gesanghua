<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>持续反馈
    </div>
    <div class="actions">
      <!-- <%= link_to new_admin_flower_continual_feedback_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>新增</span>
      <% end %> -->
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_flower_continual_feedbacks_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :apply_school_name_cont, '搜索' %>
                <%= f.text_field :apply_school_name_cont, class: 'form-control', placeholder: '学校名称' %>
              </div>
              <div class="form-group">
                <%= f.label :check_eq, '是否查看' %>
                <%= f.select :check_eq, Feedback.options_for_select(:checks, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <!-- <div class="form-group">
                <%= f.label :recommend_eq, '是否推荐' %>
                <%= f.select :recommend_eq, Feedback.options_for_select(:recommends, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div> -->
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              反馈时间
            </th>
            <th>
              学校名称
            </th>
            <th>
              项目联系人
            </th>
            <th>
              反馈内容
            </th>
            <th>
              是否查看
            </th>
            <!-- <th>
              是否推荐
            </th> -->
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @continuals.each do |continual| %>
              <tr>
                <td>
                  <%= l continual.created_at %>
                </td>
                <td>
                  <%= continual.owner.school.name %>
                </td>
                <td>
                  <%= continual.owner.school.contact_name %>
                  <%= continual.owner.school.contact_phone %>
                </td>
                <td>
                  <%= continual.content.html_safe %>
                </td>
                <td>
                  <%= continual.enum_name(:check) %>
                </td>
                <!-- <td>
                  <%= link_to recommend_admin_flower_continual_feedback_path(continual), data: {confirm: "确定#{continual.recommend? ? '取消推荐该反馈' : '推荐该反馈'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{continual.recommend? ? 'yellow' : 'default'}" do %>
                    <%= continual.recommend? ? '推荐' : '正常' %>
                    <i class="fa <%= continual.recommend? ? 'fa-star' : 'fa-star-o' %>"></i>
                  <% end %>
                </td> -->
                <td>
                  <!-- <%= link_to edit_admin_flower_continual_feedback_path(continual), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_flower_continual_feedback_path(continual), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                    <i class="fa fa-trash-o"></i> 删除
                  <% end %> -->
                  <%= link_to admin_flower_continual_feedback_path(continual), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-file"></i> 查看
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@continuals) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @continuals, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
