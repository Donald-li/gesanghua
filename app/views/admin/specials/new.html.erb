<div class="portlet light bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-icon"></i>
      <span class="caption-subject">新增专题</span>
    </div>
    <div class="actions">
      <div class="portlet-input input-inline input-small">
        <div class="input-icon right">
        </div>
      </div>
    </div>
  </div>
  <div class="portlet-body form">
    <%= simple_form_for [:admin, @special], wrapper: :admin_form, html: {data: {'parsley-validate': true}} do |f| %>
        <%= f.error_notification %>
        <div class="form-body form-horizontal">
          <%= f.input :name, label: '专题名称：', autofocus: true, input_html: { data: {'parsley-required': true}} %>
          <div class="form-group">
            <label class="col-md-2 control-label">选择模板：</label><br>
            <%= f.radio_button :template, '1' %>
            <%= f.radio_button :template, '2' %>
          </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-3 col-md-9">
              <%= f.button :submit, '确定新增', class: 'btn green' %>
              <%= link_to '取消', admin_specials_path, class: 'btn' %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
