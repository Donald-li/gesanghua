<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>专题管理
    </div>
    <div class="actions">
      <%= link_to new_admin_special_path, class: 'btn blue-soft', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                专题标题
              </th>
              <th>
                专题简介
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @specials.each do |special| %>
            <tr>
              <td>
                <%= special.name %>
              </td>
              <td>
                <%= special.describe %>
              </td>
              <td>
                <%= link_to edit_admin_special_path(special), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 修改
                <% end %>
                <%= link_to admin_special_path(special), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                  <i class="fa fa-trash-o"></i> 删除
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@specials) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @specials, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
