<%= simple_form_for [:admin, @administrator], wrapper: :admin_form do |f| %>
    <%= f.error_notification %>
    <div class="form-body form-horizontal">
      <%= f.input :login, label: '管理员账号：', autofocus: true %>
      <%= f.input :nickname, label: '管理员昵称：' %>
      <%= f.input :kind, as: :radio_buttons, wrapper: :inline_inputs, collection: Administrator.options_for_select(:kinds), label: '管理员类型：'%>
      <%= f.input :password, label: '设置密码：', hint: '设置登录密码', placeholder: '如果不修改密码，请留空' %>
      <%= f.input :password_confirmation, label: '确认密码：', hint: '重新输入一次密码' %>
    </div>
    <div class="form-actions">
      <div class="row">
        <div class="col-md-offset-3 col-md-9">
          <%= f.button :submit, '提交', class: 'btn green' %>
          <%= link_to '取消', admin_administrators_path, class: 'btn' %>
        </div>
      </div>
    </div>
<% end %>
