<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>用户管理
    </div>
    <div class="actions">
      <%= link_to new_admin_user_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
        <i class="icon-plus"></i>
        <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_users_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :nickname_or_name_or_phone_cont, '搜索' %>
            <%= f.text_field :nickname_or_name_or_phone_cont, class: 'form-control', placeholder: '使用姓名、昵称或手机号搜索' %>
          </div>
          <div class="form-group">
            <%= f.label '注册时间' %>
            <%= f.text_field :created_at_gteq, class: 'form-control datepicker', placeholder: '开始时间' %>
            <%= f.text_field :created_at_lteq, class: 'form-control datepicker', placeholder: '结束时间' %>
          </div>
          <div class="form-group">
            <%= f.label :state_eq, '状态' %>
            <%= f.select :state_eq, User.options_for_select(:states, raw: true), {include_blank: '全部'}, placeholder: '', class: 'form-control' %>
          </div>
          <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable dropdown-select">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                昵称
              </th>
              <th>
                姓名
              </th>
              <th>
                手机号
              </th>
              <th>
                余额
              </th>
              <th>
                历史捐赠金额
              </th>
              <th>
                可开票金额
              </th>
              <th>
                账号状态
              </th>
              <th>
                其他身份
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.nickname %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= user.phone %>
              </td>
              <td>
                ￥<%= number_to_currency(user.balance) %>
              </td>
              <td>
                ￥<%= number_to_currency(user.donate_records.paid.sum(:amount)) %>
              </td>
              <td>
                ￥<%= number_to_currency(user.to_bill_amount) %>
              </td>
              <td>
                <%= link_to switch_admin_user_path(user), data: {confirm: "确定#{user.state === 'enable' ? '禁用该用户' : '启用该用户'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{user.state === 'enable' ? 'green' : 'default'}" do %>
                <%= user.state === 'enable' ? '启用' : '禁用' %>
                <i class="fa <%= user.state === 'enable' ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                <% end %>
              </td>
              <td>
                <%# if user.administrator.present? %>
                  <!-- <span class="btn btn-xs yellow">管理员</span> -->
                <%# end %>
                  <% if user.has_role?(:headmaster) %>
                    <span class="btn btn-xs yellow">校长</span>
                  <% end %>
                  <% if user.has_role?(:teacher) %>
                    <span class="btn btn-xs yellow">教师</span>
                  <% end %>
                <% if user.has_role?(:volunteer) %>
                  <span class="btn btn-xs yellow">志愿者</span>
                <% end %>
                <% if user.has_role?(:county_user) %>
                  <span class="btn btn-xs yellow">县级领导</span>
                <% end %>
              </td>
              <td>
                <div class="btn-group">
                  <a class="btn btn-xs green dropdown-toggle" data-toggle="dropdown" href="javascript:;" aria-expanded="false" >
                    <i class="fa fa-users"></i>
                    管理用户角色
                    <i class="fa fa-angle-down"></i>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <% if user.has_role?(:volunteer) %>
                        <a href="<%= edit_admin_volunteer_path(user_id: user.id, id: user.volunteer.id) %>"> 修改志愿者角色 </a>
                      <% else %>
                          <a href="<%= new_admin_volunteer_path(user_id: user.id) %>"> 新增志愿者角色 </a>
                      <% end %>
                    </li>
                    <li>
                      <a href="javascript:;"> 教师角色 </a>
                    </li>
                  </ul>
                </div>
                <%= link_to edit_admin_user_path(user), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 修改
                <% end %>
                <%= link_to admin_user_donate_records_path(user), 'data-no-turbolink' => true, class: 'btn btn-xs yellow' do %>
                  <i class="fa fa-file-text-o"></i> 捐助记录
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@users) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @users, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
