<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i><%= link_to @apply.name, admin_read_projects_path %> > <%= link_to @bookshelf.classname, admin_read_project_bookshelves_path(@apply) %> > 捐助记录
    </div>
    <div class="actions">
      <%= link_to new_admin_read_project_bookshelf_donate_record_path(@apply, bookshelf_id: @bookshelf.id), class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
        <i class="icon-plus"></i>
        <span>平台配捐</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_read_project_bookshelf_donate_records_path(@bookshelf), class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :title_cont, '搜索收入' %>
            <%= f.text_field :agent_name_or_agent_phone_cont, class: 'form-control', placeholder: '捐助人姓名、捐助人手机号' %>
          </div>
          <div class="form-group">
            <%= f.label '捐助时间' %>
            <%= f.text_field :created_at_gteq, class: 'form-control datepicker', placeholder: '开始时间' %>
            <%= f.text_field :created_at_lteq, class: 'form-control datepicker', placeholder: '结束时间' %>
          </div>
          <button type="submit" class="btn btn-default grey">查询</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                <!-- 收入单号 -->
                捐助时间
              </th>
              <!-- <th>
                受捐项目
              </th> -->
              <th>
                <!-- 捐款人 -->
                捐助人
              </th>
              <th>
                代捐人/汇款人
              </th>
              <th>
                <!-- 捐助时间 -->
                捐助说明
              </th>
              <th>
                捐助金额
              </th>
              <th>
                捐助平台
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @donate_records.each do |record| %>
            <tr>
              <td>
                <%= l record.created_at %>
              </td>
              <!-- <td>
                <%= record.project.name %>
              </td> -->
              <td>
                <% if record.system? %>
                  <%= record.user.try(:name) %> ( <%= record.user.try(:phone) %> )
                <% elsif record.platform? %>
                  <% if record.user.present? %>
                    <%= record.user.try(:name) %> ( <%= record.user.try(:phone) %> )
                  <% else %>
                      平台配捐
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= record.donor %> / <%= record.remitter_name %>
              </td>
              <td>
                <!-- <%= l record.created_at %> -->
                <% if record.system? %>
                  收入单号<%= record.try(:income_record).try(:id) %>
                <% elsif record.platform? %>
                  <% if record.user.present? %>
                    用户余额捐助
                  <% elsif record.income_record.present? %>
                  <% else %>
                    使用其他资金
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= record.amount %>
              </td>
              <td>
                <%= record.income_record.income_source.try(:name) if record.income_record.present? %>
              </td>
              <td>
                <%= link_to admin_read_project_bookshelf_donate_record_path(read_project_id: @apply.id, bookshelf_id: @bookshelf.id, id: record.id), class: 'btn btn-xs blue' do %>
                  <i class="fa fa-file"></i> 查看详情
                <% end %>
                <% if record.platform? %>
                <%= link_to admin_read_project_bookshelf_donate_record_path(read_project_id: @apply.id, bookshelf_id: @bookshelf.id, id: record.id), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                  <i class="fa fa-trash-o"></i> 删除
                <% end %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@donate_records) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @donate_records, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
