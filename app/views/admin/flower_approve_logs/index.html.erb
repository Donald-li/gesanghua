<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>审核记录
    </div>
    <div class="actions">
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              时间
            </th>
            <th>
              用户
            </th>
            <th>
              内容
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @audits.each do |audit| %>
              <tr>
                <td>
                  <%= l audit.created_at %>
                </td>
                <td>
                  <%= audit.user.try(:name) %>
                </td>
                <td>
                  <%= audit.comment %>
                </td>
                <td>
                  <%= link_to admin_flower_apply_flower_approve_log_path(audit.owner, audit), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                    <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@audits) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @audits, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
