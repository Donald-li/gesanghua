<%= simple_form_for [:admin, @major], wrapper: :admin_form, html: {'data-parsley-validate': true} do |f| %>
  <%= f.error_notification %>
  <div class="form-body form-horizontal">
    <%= f.input :name, label: '名称：', autofocus: true, placeholder: '名称', required: true %>
  </div>
  <div class="form-actions">
    <div class="row">
      <div class="col-md-offset-2 col-md-9">
        <%= f.button :submit, '提交', class: 'btn blue' %>
        <%= link_to '取消', admin_majors_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>