<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>财务分类统计汇总
    </div>
    <div class="actions">
      <%= link_to admin_fund_categories_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
        <i class="fa fa-reply"></i>
        <span>返回</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <form class="form-inline" id="user_search" action="/admin/fund_categories/statistic" accept-charset="UTF-8" method="get">
            <div class="form-group">
              <label for="q_注册时间">时间范围</label>
              <input class="form-control datepicker gsh-input-share-l" placeholder="开始时间" type="text" name="time_start">
              <input class="form-control datepicker gsh-input-share-r" placeholder="结束时间" type="text" name="time_end">
            </div>
            <div class="form-group">
              <select placeholder="" class="form-control gsh-input-share" name="fix_time">
                <option value="" <%='selected' if  !params[:fix_time].present? %>>全部</option>
                <option value="day" <%= 'selected' if params[:fix_time] == 'day' %>>今天</option>
                <option value="week" <%= 'selected' if params[:fix_time] == 'week' %>>本周</option>
                <option value="month" <%= 'selected' if params[:fix_time] == 'month' %>>本月</option>
                <option value="year" <%= 'selected' if params[:fix_time] == 'year' %>>本年</option>
              </select>
            </div>
            <button type="submit" class="btn btn-default grey">搜索</button>
          </form>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                一级分类名称
              </th>
              <th>二级分类名称</th>
              <th>历史收入</th>
              <th>历史支出</th>
              <th>余额</th>
            </tr>
          </thead>
          <tbody>
            <% @fund_categories.each do |cate| %>
            <tr>
              <td>
                <%= cate.name %>
              </td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <% if cate.funds.count > 0 %>
              <% cate.funds.sorted.each do |fund| %>
              <tr>
                <td></td>
                <td>
                  <%= fund.name %>
                </td>
                <td>
                  <% in_total = fund.total_income_money(params[:time_start], params[:time_end], params[:fix_time]) %>
                  ￥<%= format_money(in_total) %>
                </td>
                <td>
                  <% out_total = fund.total_expenditure_money(params[:time_start], params[:time_end], params[:fix_time]) %>
                  ￥<%= format_money(out_total) %>
                </td>
                <td>
                  <%= "￥#{format_money(in_total - out_total)}" %>
                </td>
              </tr>
              <% end %>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
