<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>观影 > 批次管理
    </div>
    <% if can? :manage_project, current_user, Project.movie_project %>
    <div class="actions">
      <%= link_to new_admin_project_movie_season_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
        <i class="icon-plus"></i>
        <span>新增</span>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_project_movie_seasons_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '批次名称' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '可根据批次名称搜索' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              批次名称
            </th>
            <th>
              申请状态
            </th>
            <th width="230px">
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @seasons.each do |season| %>
              <tr>
                <td>
                  <%= season.name %>
                </td>
                <td>
                  <%= season.enum_name(:state) %>
                </td>
                <td>
                  <%= link_to edit_admin_project_movie_season_path(season), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_project_movie_season_path(season), class: 'btn btn-xs red', method: :delete, data: {confirm: '删除本批次，将会同时删除本批次下的所有申请记录，确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@seasons) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @seasons, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
