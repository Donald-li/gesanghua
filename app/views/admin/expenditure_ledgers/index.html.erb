<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>财务分类
    </div>
    <div class="actions">
      <%= link_to new_admin_expenditure_ledger_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增来源</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                财务分类
              </th>
              <th>
                描述
              </th>
              <th>
                累计支出（元）
              </th>
              <th>
                排序
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @ledgers.each do |ledger| %>
            <tr>
              <td>
                <%= ledger.name %>
              </td>
              <td>
                <%= ledger.describe %>
              </td>
              <td>
                <%= ledger.amount %>
              </td>
              <td>
                <%= link_to '顶部', move_admin_expenditure_ledger_path(ledger, to: :to_top), method: :put %>
                <%= link_to '上', move_admin_expenditure_ledger_path(ledger, to: :higher), method: :put %>
                <%= link_to '下', move_admin_expenditure_ledger_path(ledger, to: :lower), method: :put %>
                <%= link_to '底部', move_admin_expenditure_ledger_path(ledger, to: :to_bottom), method: :put %>
              </td>
              <td>
                <%= link_to edit_admin_expenditure_ledger_path(ledger), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 修改
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
