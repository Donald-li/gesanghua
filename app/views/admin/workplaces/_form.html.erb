<%= simple_form_for [:admin, @workplace], wrapper: :admin_form, html: {'data-parsley-validate': true, class: 'category_form'} do |f| %>
  <%= f.error_notification %>
  <div class="form-body form-horizontal">
    <%= f.input :title, label: '标题：', autofocus: true, placeholder: '标题', required: true %>
    <%= f.input :describe, label: '描述：', placeholder: '' %>
    <%= f.input :state, as: :radio_buttons, wrapper: :inline_inputs, collection: Workplace.options_for_enum_select(:states), label: '状态：'%>
  </div>
  <div class="form-actions">
    <div class="row">
      <div class="col-md-offset-2 col-md-9">
        <%= f.button :submit, '提交', class: 'btn blue' %>
        <%= link_to '取消', admin_workplaces_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>