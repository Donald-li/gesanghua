<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>收入分类管理
    </div>
    <div class="actions">
      <%= link_to new_admin_finance_category_path, class: 'btn blue-soft', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_finance_categories_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :name_cont, '分类名称' %>
            <%= f.text_field :name_cont, class: 'form-control', placeholder: '' %>
          </div>
          <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                一级分类名称
              </th>
              <th>
                二级分类名称
              </th>
              <th>
                描述
              </th>
              <th>
                管理费
              </th>
              <th>
                余额
              </th>
              <th>
                累计收入
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% OneLevelFinanceCategory.all.each do |cate| %>
            <tr>
              <td>
                <%= cate.name if cate.root? %>
              </td>
              <td>
                <%= cate.name unless cate.root? %>
              </td>
              <td>
                <%= cate.describe %>
              </td>
              <td>
                <%= cate.management_rate %>%
              </td>
              <td>
                ￥<%= number_to_currency(cate.amount) %>
              </td>
              <td>
                ￥<%= number_to_currency(cate.total) %>
              </td>
              <td>
                <%= link_to edit_admin_finance_category_path(cate), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 修改
                <% end %>
                <%= link_to admin_finance_category_path(cate), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                  <i class="fa fa-trash-o"></i> 删除
                <% end %>
              </td>
            </tr>

            <% if cate.has_children? %>
              <% cate.children.each do |sc| %>
              <tr>
                <td>
                  <%= sc.name if sc.root? %>
                </td>
                <td>
                  <%= sc.name unless sc.root? %>
                </td>
                <td>
                  <%= sc.describe %>
                </td>
                <td>
                  <%= sc.management_rate %>%
                </td>
                <td>
                  ￥<%= number_to_currency(sc.amount) %>
                </td>
                <td>
                  ￥<%= number_to_currency(sc.total) %>
                </td>
                <td>
                  <%= link_to edit_admin_finance_category_path(sc), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                    <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_finance_category_path(sc), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                    <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
              <% end %>

            <% end %>

            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@finance_categories) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @finance_categories, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
