
<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-note font-dark"></i>
      <span class="caption-subject font-dark bold uppercase">成员名单</span>
    </div>
    <div class="actions">
      <%= link_to admin_camp_project_project_season_apply_camps_path(@apply), class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="fa fa-reply"></i>
          <span>返回</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
          <div class="col-md-12">
            <div class="tabbable-line boxless tabbable-reversed">
              <ul class="nav nav-tabs">
                <li class="active">
                  <a href="#tab_0" data-toggle="tab" aria-expanded="true"> 学生名单 </a>
                </li>
                <li>
                  <a href="#tab_1" data-toggle="tab" aria-expanded="false"> 陪同教师 </a>
                </li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane active" id="tab_0">
                  <table class="table table-striped table-bordered table-hover" id="sample_2">
                    <thead>
                    <tr>
                      <th>
                        身份证
                      </th>
                      <th>
                        姓名
                      </th>
                      <th>
                        年龄
                      </th>
                      <th>
                        性别
                      </th>
                      <th>
                        民族
                      </th>
                      <th>
                        年级
                      </th>
                      <th>
                        推荐理由
                      </th>
                      <th>
                        监护人
                      </th>
                      <th>
                        状态
                      </th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @students.each do |student| %>
                        <tr>
                          <td>
                            <%= student.id_card %>
                          </td>
                          <td>
                            <%= student.name %>
                          </td>
                          <td>
                            <%= student.age %>
                          </td>
                          <td>
                            <%= student.enum_name(:gender) %>
                          </td>
                          <td>
                            <%= student.enum_name(:nation) %>
                          </td>
                          <td>
                            <%= student.enum_name(:level) %> <%= student.enum_name(:grade) %>
                          </td>
                          <td>
                            <%= student.reason %>
                          </td>
                          <td>
                            <%= student.guardian_name %>
                          </td>
                          <td>
                            <%= student.enum_name(:state) %>
                          </td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                <div class="tab-pane" id="tab_1">
                  <table class="table table-striped table-bordered table-hover" id="sample_2">
                    <thead>
                    <tr>
                      <th>
                        身份证
                      </th>
                      <th>
                        姓名
                      </th>
                      <th>
                        年龄
                      </th>
                      <th>
                        性别
                      </th>
                      <th>
                        民族
                      </th>
                      <th>
                        状态
                      </th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @teachers.each do |teacher| %>
                        <tr>
                          <td>
                            <%= teacher.id_card %>
                          </td>
                          <td>
                            <%= teacher.name %>
                          </td>
                          <td>
                            <%= teacher.age %>
                          </td>
                          <td>
                            <%= teacher.enum_name(:gender) %>
                          </td>
                          <td>
                            <%= teacher.enum_name(:nation) %>
                          </td>
                          <td>
                            <%= teacher.enum_name(:state) %>
                          </td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

