<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>项目分类管理
    </div>
    <div class="actions">
      <%= link_to new_admin_project_path, class: 'btn blue-soft', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增项目</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_projects_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '分类名' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '分类名' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              分类名称
            </th>
            <th>
              项目类型
            </th>
            <th>
              财务分类
            </th>
            <th>
              描述
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @projects.each do |project| %>
              <tr>
                <td>
                  <%= project.name %>
                </td>
                <td>
                  <%= project.enum_name(:kind) %>
                </td>
                <td>
                  <%= "#{project.fund.fund_category.name} - #{project.fund.name}" %>
                </td>
                <td>
                  <%=  project.sliced_describe %>
                </td>
                <td>
                  <%= link_to edit_admin_project_path(project), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@projects) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @projects, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
