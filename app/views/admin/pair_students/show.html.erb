<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-sliders font-dark"></i>
      <span class="caption-subject font-dark bold uppercase">审核一对一项目申请</span>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-bordered table-hover">
        <tbody>
        <tr>
          <th>
            申请编号
          </th>
          <th>
            <%= @project_apply.apply_no %>
          </th>
        </tr>
        <tr>
          <th>
            申请学校
          </th>
          <th>
            <%= @project_apply.school.try(:name) %>
          </th>
        </tr>
        <tr>
          <th>
            申请批次
          </th>
          <th>
            <%= @project_apply.season.try(:name) %>
          </th>
        </tr>
        <tr>
          <th>
            姓名
          </th>
          <th>
            <%= @apply_child.name %>
          </th>
        </tr>
        <tr>
          <th>
            中学
          </th>
          <th>
            <%= @apply_child.enum_name(:level) %>
          </th>
        </tr>
        <tr>
          <th>
            年级
          </th>
          <th>
            <%= @apply_child.enum_name(:grade) %>
          </th>
        </tr>
        <tr>
          <th>
            学期
          </th>
          <th>
            <%= @apply_child.enum_name(:semester) %>
          </th>
        </tr>
        <tr>
          <th>
            身份证号
          </th>
          <th>
            <%= @apply_child.id_card %>
          </th>
        </tr>
        <tr>
          <th>
            民族
          </th>
          <th>
            <%= @apply_child.enum_name(:nation) %>
          </th>
        </tr>
        <tr>
          <th>
            性别
          </th>
          <th>
            <%= @apply_child.enum_name(:gender) %>
          </th>
        </tr>
        <tr>
          <th>
            家长姓名
          </th>
          <th>
            <%= @apply_child.parent_name %>
          </th>
        </tr>
        <tr>
          <th>
            联系电话
          </th>
          <th>
            <%= @apply_child.phone %>
          </th>
        </tr>
        <tr>
          <th>
            描述
          </th>
          <th>
            <%= @apply_child.description %>
          </th>
        </tr>
        <tr>
          <th>
            孩子图片
          </th>
          <th>
            <%= @apply_child.description %>
            <% @apply_child.images.each do |image| %>
                <%= image_tag image.try(:file).try(:url, :small) %>
            <% end %>
          </th>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="portlet-body form">
      <%= simple_form_for [:admin, @apply_child], url: check_admin_pair_apply_pair_student_path(@project_apply), method: :patch, wrapper: :admin_form, html: {id: 'approve-form'} do |f| %>
        <%= f.error_notification %>
        <div class="form-body form-horizontal">
          <%= f.input :approve_state, as: :radio_buttons, wrapper: :inline_inputs, collection: ProjectSeasonApply.options_for_some_select(:audit_states, ['pass', 'reject']), label: '审核状态：', required: 'required', input_html: { class: 'approve_state', onclick: 'toggleState();'} %>
          <div class="approve_reject">
            <%= f.input :approve_remark, label: '审核备注：', input_html: {class: 'form-control', placeholder: '', value: @apply_child.audits.try(:last).try(:comment)} %>
          </div>
          <div class="form-actions">
            <div class="row">
              <div class="col-md-offset-3 col-md-9">
                <%= f.button :submit, '提交', class: 'btn green' %>
                <%= link_to '取消', admin_pair_apply_pair_students_path(@project_apply), class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
        </div>
      <% end %>
      </div>
</div>
<script type="text/javascript">
    function toggleState(){
        toggleRadioInput('.approve_state', {
            reject: '.approve_reject'
        })
    }
    toggleState();
    $("#approve-form").html5Validate(function () {
        $(this).find('[type="submit"]').attr('disabled', 'disabled');
        this.submit();
    });
</script>
