<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-sliders font-dark"></i>
      <span class="caption-subject font-dark bold uppercase">审核结对助学项目申请</span>
    </div>
    <div class="actions">
      <%= link_to admin_pair_apply_pair_students_path(@project_apply), class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="fa fa-reply"></i>
          <span>返回</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-bordered table-hover">
        <tbody>
        <tr>
          <td>
            申请编号
          </td>
          <td>
            <%= @project_apply.id %>
          </td>
        </tr>
        <tr>
          <td>
            申请学校
          </td>
          <td>
            <%= @project_apply.school.try(:name) %>
          </td>
        </tr>
        <tr>
          <td>
            申请批次
          </td>
          <td>
            <%= @project_apply.season.try(:name) %>
          </td>
        </tr>
        <tr>
          <td>
            姓名
          </td>
          <td>
            <%= @apply_child.name %>
          </td>
        </tr>
        <tr>
          <td>
            中学
          </td>
          <td>
            <%= @apply_child.enum_name(:level) %>
          </td>
        </tr>
        <tr>
          <td>
            年级
          </td>
          <td>
            <%= @apply_child.enum_name(:grade) %>
          </td>
        </tr>
        <tr>
          <td>
            班级
          </td>
          <td>
            <%= @apply_child.classname %>
          </td>
        </tr>
        <tr>
          <td>
            学期
          </td>
          <td>
            <%= @apply_child.enum_name(:semester) %>
          </td>
        </tr>
        <tr>
          <td>
            身份证号
          </td>
          <td>
            <%= @apply_child.id_card %>
          </td>
        </tr>
        <tr>
          <td>
            民族
          </td>
          <td>
            <%= @apply_child.enum_name(:nation) %>
          </td>
        </tr>
        <tr>
          <td>
            性别
          </td>
          <td>
            <%= @apply_child.enum_name(:gender) %>
          </td>
        </tr>
        <tr>
          <td>
            自我介绍
          </td>
          <td>
            <%= @apply_child.description %>
          </td>
        </tr>
        <tr>
          <td>
            班主任
          </td>
          <td>
            <%= @apply_child.teacher_name %>
          </td>
        </tr>
        <tr>
          <td>
            联系方式
          </td>
          <td>
            <%= @apply_child.teacher_phone %>
          </td>
        </tr>
        <tr>
          <td>
            父亲
          </td>
          <td>
            <%= @apply_child.father %>
          </td>
        </tr>
        <tr>
          <td>
            父亲职业
          </td>
          <td>
            <%= @apply_child.father_job %>
          </td>
        </tr>
        <tr>
          <td>
            母亲
          </td>
          <td>
            <%= @apply_child.mother %>
          </td>
        </tr>
        <tr>
          <td>
            母亲职业
          </td>
          <td>
            <%= @apply_child.mother_job %>
          </td>
        </tr>
        <tr>
