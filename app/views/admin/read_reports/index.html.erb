<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>报告管理
    </div>
    <% if can? :manage_project, current_user, Project.pair_project %>
        <div class="actions">
          <%= link_to new_admin_read_report_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
              <i class="icon-plus"></i>
              <span>新增</span>
          <% end %>
        </div>
    <% end %>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_read_reports_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :title_or_user_name_or_user_nickname_cont, '搜索' %>
                <%= f.text_field :title_or_user_name_or_user_nickname_cont, class: 'form-control gsh-input-share', placeholder: '请输入标题或发布人' %>
              </div>
              <div class="form-group">
                <%= f.label :state_eq, '状态' %>
                <%= f.select :state_eq, ProjectReport.options_for_select(:states, raw: true), {include_blank: '全部'}, placeholder: '', class: 'form-control gsh-input-share' %>
              </div>
              <div class="form-group">
                <%= f.label '发布时间' %>
                <%= f.text_field :published_at_gteq, class: 'form-control datepicker gsh-input-share-l', placeholder: '开始时间' %>
                <%= f.text_field :published_at_lteq, class: 'form-control datepicker gsh-input-share-r', placeholder: '结束时间' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              报告类型
            </th>
            <th>
              报告标题
            </th>
            <th>
              发布时间
            </th>
            <th>
              发布人
            </th>
            <th>
              状态
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @reports.each do |report| %>
              <tr>
                <td>
                  <%= report.enum_name(:kind) %>
                </td>
                <td>
                  <%= report.title %>
                </td>
                <td>
                  <%= l report.published_at %>
                </td>
                <td>
                  <%= report.try(:user).try(:name) %>
                </td>
                <td>
                  <%= link_to switch_admin_read_report_path(report), data: {confirm: "确定#{report.state === 'show' ? '隐藏该报告' : '展示该报告'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{report.state === 'show' ? 'green' : 'default'}" do %>
                      <%= report.state === 'show' ? '展示' : '隐藏' %>
                      <i class="fa <%= report.state === 'show' ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_admin_read_report_path(report), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_read_report_path(report), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@reports) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @reports, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
