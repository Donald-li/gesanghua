<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i><%= link_to @apply.name, admin_flower_projects_path %> > 收货凭证
    </div>
    <div class="actions">
      <!-- <%= link_to new_admin_flower_project_flower_receive_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>新增</span>
      <% end %> -->
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              时间
            </th>
            <th>
              反馈人
            </th>
            <th>
              反馈内容
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
              <tr>
                <td>
                  <%= l @receive.try(:created_at) %>
                </td>
                <td>
                  <%= @receive.user.try(:name) %>
                  <%= @receive.user.try(:phone) %>
                </td>
                <td>
                  <%= @receive.content.html_safe %>
                </td>
                <td>
                  <%= link_to edit_admin_flower_project_flower_receive_path(@apply), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_flower_project_flower_receive_path(@apply), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                    <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"></div>
        </div>
        <div class="col-md-7 col-sm-12">
        </div>
      </div>
    </div>
  </div>
</div>
