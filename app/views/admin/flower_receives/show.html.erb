
<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-sliders font-dark"></i>
      <span class="caption-subject font-dark bold uppercase"><%= link_to @receive.owner.name, admin_flower_projects_path %> > 收货凭证详情</span>
    </div>
    <div class="actions">
      <div class="btn-group">
        <a href="<%= admin_flower_projects_path %>" class="btn btn-xs blue">
          <i class="fa fa-reply"></i>返回
        </a>
      </div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-bordered table-hover">
        <tbody>
        <tr>
          <th>
            申请编号
          </th>
          <th>
            <%= @receive.owner.apply_no %>
          </th>
        </tr>
        <tr>
          <th>
            项目名称
          </th>
          <th>
            <%= @receive.owner.name %>
          </th>
        </tr>
        <tr>
          <th>
            反馈人
          </th>
          <th>
            <%= @receive.user.try(:name) %>
          </th>
        </tr>
        <tr>
          <th>
            反馈时间
          </th>
          <th>
            <%= l @receive.created_at %>
          </th>
        </tr>
        <tr>
          <th>
            反馈内容
          </th>
          <th>
            <%= @receive.content.html_safe %> <br>
            <% @receive.images.each do |image| %>
              <%= image_tag image.try(:file).try(:url, :tiny) %>
            <% end %>
          </th>
        </tr>
        </tbody>

      </table>
    </div>
  </div>
</div>
