<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>发放异常处理
    </div>
    <div class="actions">

    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_pair_grants_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :grant_no_or_gsh_child_name_or_gsh_child_id_card_cont, '搜索学生' %>
                <%= f.text_field :grant_no_or_gsh_child_name_or_gsh_child_id_card_cont, class: 'form-control', placeholder: '发放编号、学生信息' %>
              </div>
              <div class="form-group">
                <%= f.label :school_name_cont, '搜索学校' %>
                <%= f.text_field :school_name_cont, class: 'form-control', placeholder: '学校名称' %>
              </div>
              <div class="form-group">
                <%= f.label :state_eq, '处理状态' %>
                <%= f.select :state_eq, GshChildGrant.options_for_select(:states, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              发放编号
            </th>
            <th>
              姓名
            </th>
            <th>
              取消原因
            </th>
            <th>
              退回金额
            </th>
            <th>
              处理方式
            </th>
            <th>
              处理人
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @grants.each do |grant| %>
              <tr>
                <td>
                  <%= grant.grant_no %>
                </td>
                <td>
                  <%= grant.try(:gsh_child).try(:name) %>
                </td>
                <td>
                  <%= grant.cancel_reason %>
                </td>
                <td>
                  ¥<%= number_to_currency(grant.amount) %>
                </td>
                <td>
                  <%= grant.enum_name(:balance_manage) %>
                  <%= grant.cancel_remark %>
                </td>
                <td>
                  <%= grant.try(:operator).try(:name) %>
                </td>
                <td>
                  <%= link_to edit_admin_pair_grant_exception_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs yellow' do %>
                      <i class="fa fa-eye"></i> 查看
                  <% end %>
                  <!-- <%= link_to '###', 'data-no-turbolink' => true, class: 'btn btn-xs yellow' do %>
                      <i class="fa fa-pencil"></i> 标记处理
                  <% end %> -->
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@grants) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @grants, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
