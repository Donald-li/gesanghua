<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>项目分类管理
    </div>
    <div class="actions">
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_project_templates_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '分类名' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '分类名' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              项目分类
            </th>
            <th>
              子分类
            </th>
            <th>
              描述
            </th>
            <th width="230px">
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @project_templates.each do |project_template| %>
              <tr>
                <td>
                  <%= project_template.name %>
                </td>
                <td>
                </td>
                <td>
                  <%=  project_template.sliced_describe %>
                </td>
                <td>
                  <%= link_to admin_project_template_path(project_template), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-file"></i> 查看
                  <% end %>
                  <%= link_to edit_admin_project_template_path(project_template), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to new_admin_project_template_path(parent_id:project_template.id), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-plus"></i> 新增子分类
                  <% end %>
                </td>
              </tr>
              <% project_template.children.sorted.each do |prot| %>
                  <tr>
                    <td>

                    </td>
                    <td>
                      <%= prot.name %>
                    </td>
                    <td>
                      <%= prot.describe %>
                    </td>
                    <td>
                      <%= link_to admin_project_template_path(prot), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                          <i class="fa fa-file"></i> 查看
                      <% end %>
                      <%= link_to edit_admin_project_template_path(prot), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                          <i class="fa fa-edit"></i> 修改
                      <% end %>
                      <% if prot.custom? %>
                      <%= link_to admin_project_template_path(prot), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                          <i class="fa fa-trash-o"></i> 删除
                      <% end %>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              <!-- -->
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@project_templates) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @project_templates, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
