
<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-sliders font-dark"></i>
      <span class="caption-subject font-dark bold uppercase">帮助详情</span>
    </div>
    <div class="actions">
      <div class="btn-group">
        <a href="<%= edit_admin_support_path(@support) %>" class="btn btn-xs blue">
          <i class="fa fa-edit"></i>修改帮助
        </a>
      </div>
      <div class="btn-group">
        <a href="<%= admin_supports_path %>" class="btn btn-xs blue">
          <i class="fa fa-reply"></i>返回
        </a>
      </div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-bordered table-hover">
        <tbody>
        <tr>

          <td>
            帮助标题
          </td>
          <td>
            <%= @support.title %>
          </td>
        </tr>
        <tr>
          <td>
            显示位置
          </td>
          <td>
            <%= @support.enum_name(:display_position) %>
          </td>
        </tr>
        <tr>
          <td>
            详情
          </td>
          <td>
            <%= @support.content.html_safe %>
          </td>
        </tr>
        <tr>
          <td>
            状态
          </td>
          <td>
            <%= @support.enum_name(:state) %>
          </td>
        </tr>
        </tbody>

      </table>
    </div>
  </div>
</div>
