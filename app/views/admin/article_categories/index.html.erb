<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>资讯分类管理
    </div>
    <div class="actions">
      <%= link_to new_admin_article_category_path, class: 'btn blue-soft', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_article_categories_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :name_cont, '资讯分类标题' %>
            <%= f.text_field :name_cont, class: 'form-control', placeholder: '资讯分类标题' %>
          </div>
          <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                资讯分类标题
              </th>
              <th>
                状态
              </th>
              <th>
                排序
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @article_categories.each do |cate| %>
            <tr>
              <td>
                <%= cate.name %>
              </td>
              <td>
                <%= link_to switch_admin_article_category_path(cate), data: {confirm: "确定#{cate.hidden? ? '显示' : '隐藏'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{cate.show? ? 'green' : 'default'}" do %>
                  <%= cate.show? ? '显示' : '隐藏' %>
                  <i class="fa <%= cate.show? ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                <% end %>
              </td>
              <td>
                <%= link_to '顶部', move_admin_article_category_path(cate, to: :to_top), method: :put %>
                <%= link_to '上', move_admin_article_category_path(cate, to: :higher), method: :put %>
                <%= link_to '下', move_admin_article_category_path(cate, to: :lower), method: :put %>
                <%= link_to '底部', move_admin_article_category_path(cate, to: :to_bottom), method: :put %>
              </td>
              <td>
                <%= link_to edit_admin_article_category_path(cate), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 修改
                <% end %>
                <%= link_to admin_article_category_path(cate), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                   <i class="fa fa-trash-o"></i> 删除
               <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@article_categories) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @article_categories, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
