<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>编号</th>
      <th>姓名</th>
      <th>学校</th>
      <th>发放状态</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% grants.each do |grant| %>
      <tr>
        <td><%= grant.id %></td>
        <td><%= grant.gsh_child.try(:name) %></td>
        <td><%= grant.school.try(:name) %></td>
        <td><%= grant.enum_name(:state) %></td>
        <td id="grant-td-<%=grant.id%>">
          <%= link_to '推荐',
            admin_pair_grant_batch_items_path(:grant_id=>grant.id),
            :remote => true, :method => :post, class: 'btn btn-xs blue' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<%= paginate grants, params: {controller: 'admin/pair_grant_batch_items', action: :index}, theme: 'admin', remote: true %>
</div>
