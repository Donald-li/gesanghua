<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>编号</th>
      <th>姓名</th>
      <th>学校</th>
      <th>发放状态</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% grants.each do |grant| %>
      <tr id="item-tr-<%= grant.id %>">
        <td><%= grant.id %></td>
        <td><%= grant.gsh_child.try(:name) %></td>
        <td><%= grant.school.try(:name) %></td>
        <td><%= grant.enum_name(:state) %></td>
        <td id="item-td-<%=grant.id%>">
          <%= link_to '取消推荐',
            admin_pair_grant_batch_item_path(grant.grant_batch_id, grant.id),
            :remote => true, :method => :delete, class: 'btn btn-xs blue' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
</div>
