<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i> 捐助管理
    </div>
    <div class="actions">
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_pair_student_lists_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '姓名' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '搜索' %>
              </div>
              <div class="form-group">
                <%= f.label :school_id_eq, '学校' %>
                <%= f.select :school_id_eq, School.all_to_hash, {include_blank: '全部'}, class: 'form-control schools-ajax' %>
              </div>
              <div class="form-group">
                <%= f.label :project_season_id_eq, '年度' %>
                <%= f.select :project_season_id_eq, ProjectSeason.where(project_id: ProjectSeason.pair_project_id).all_to_hash, {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :kind_eq, '筹款状态' %>
                <%= f.select :kind_eq, ProjectSeasonApplyChild.options_for_select(:kinds, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              申请编号
            </th>
            <th>
              姓名
            </th>
            <th>
              学校/年级
            </th>
            <th>
              申请捐助年限
            </th>
            <th>
              筹款进度
            </th>
            <th>
              备注
            </th>
            <th>
              捐助状态
            </th>
            <th>
              捐助形式
            </th>
            <th>
              筹款状态
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @pair_student_lists.each do |child| %>
              <tr>
                <td>
                  <%= child.id %>
                </td>
                <td>
                  <%= child.try(:name) %>
                </td>
                <td>
                  <%= child.project_season_apply.try(:school).try(:name) %> / <%= child.enum_name(:grade) %>
                </td>
                <td>
                  <%= child.project_season.try(:name) %>
                </td>
                <td>
                  <%= child.raise_process %>
                </td>
                <td>
                  <%= child.remarks.count %>
                </td>
                <td>
                  <%= child.raise_condition %>
                </td>
                <td>
                  <%= link_to turn_over_admin_pair_student_list_path(child), data: {confirm: "确定#{child.kind === 'outside' ? '内部认捐' : '对外筹款'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{child.kind === 'inside' ? 'green' : 'blue'}" do %>
                      <%= child.kind === 'outside' ? '对外筹款' : '内部认捐' %>
                      <i class="fa <%= child.kind === 'outside' ? 'fa-square-o' : 'fa-check-square-o' %>"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to switch_admin_pair_student_list_path(child), data: {confirm: "确定#{child.state === 'show' ? '关闭筹款' : '开启筹款'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{child.state === 'show' ? 'green' : 'default'}" do %>
                      <%= child.state === 'show' ? '开启' : '关闭' %>
                      <i class="fa <%= child.state === 'show' ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to admin_pair_student_list_path(child), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-file"></i> 申请详情
                  <% end %>
                  <%= link_to remarks_admin_pair_student_list_path(child), 'data-no-turbolink' => true, class: 'btn btn-xs yellow' do %>
                      <i class="fa fa-list-ul"></i> 查看备注
                  <% end %>
                  <%= link_to '', 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-file"></i> 资助年度
                  <% end %>
                  <%= link_to share_admin_pair_student_list_path(child), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-file"></i> 分享链接
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@pair_student_lists) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @pair_student_lists, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(function(){
        // 异步加载学校列表
        $('.schools-ajax').select2({
            language: "zh-CN",
            placeholder: '全部',
            allowClear: false,
            ajax: {
                url: "/selects/schools",
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        q: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;
                    return {
                        results: $.map(data.items, function (item) {
                            return {
                                text: item.name,
                                id: item.id
                            }
                        }),
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    };
                },
                cache: true
            }
        });
    })
</script>