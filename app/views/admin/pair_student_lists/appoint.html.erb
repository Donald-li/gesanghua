<div class="portlet light bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-note"></i>
      <span class="caption-subject">指定捐助人</span>
      <span class="caption-helper"></span>
    </div>
    <div class="actions">
      <div class="portlet-input input-inline input-small">
        <div class="input-icon right">
        </div>
      </div>
    </div>
  </div>
  <div class="portlet-body form">
    <%= simple_form_for [:admin, @pair_student_list], url: appoint_donor_admin_pair_student_list_path, method: :post, wrapper: :admin_form, html: {'data-parsley-validate': true, class: 'form-horizontal grant_form'} do |f| %>
        <%= f.error_notification %>
        <div class="form-body">
          <%= static_form_control '学生姓名：', @pair_student_list.name %>
          <%= static_form_control '待捐助学年：', @pair_student_list.semesters.waiting.pluck(:title).join('，') %>

          <%= f.input :priority_id, as: :select, collection: [@pair_student_list.priority_user].compact.map{|u| [u.name, u.id]}, label: '选择用户：', input_html: { class: 'user-select' }, hint: '只有指定的捐助人能捐助学生的待捐助学年' %>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-2 col-md-9">
              <%= f.button :submit, '确认', class: 'btn blue' %>
              <%= link_to '取消', admin_pair_student_lists_path, class: 'btn' %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
<script>
    $(function(){
        $(".user-select").select2({
            language: "zh-CN",
            placeholder: '请选择用户',
            allowClear: true,
            ajax: {
                url: "/selects/users",
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        q: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;
                    return {
                        results: $.map(data.items, function (item) {
                            return {
                                text: item.name,
                                id: item.id
                            }
                        }),
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    };
                },
                cache: true
            }
        });
    })
</script>
