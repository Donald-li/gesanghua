<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>发放管理
    </div>
    <div class="actions">
      <%= link_to url_for(params.permit!.merge(format: :xlsx)), class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
        <i class="fa fa-download"></i>
      <span>导出</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_pair_grants_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :grant_no_or_gsh_child_name_or_gsh_child_id_card_cont, '搜索学生' %>
                <%= f.text_field :grant_no_or_gsh_child_name_or_gsh_child_id_card_cont, class: 'form-control', placeholder: '发放编号、学生信息' %>
              </div>
              <div class="form-group">
                <%= f.label :school_id_ep, '搜索学校' %>
                <%= f.select :school_id_eq, School.all_to_hash, {include_blank: '全部'}, class: 'form-control schools-ajax' %>
              </div>
              <div class="form-group">
                <%= f.label :state_eq, '发放状态' %>
                <%= f.select :state_eq, GshChildGrant.options_for_select(:states, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :donate_state_eq, '筹款状态' %>
                <%= f.select :donate_state_eq, GshChildGrant.options_for_select(:donate_states, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              发放编号
            </th>
            <th>
              申请批次
            </th>
            <th>
              申请学年
            </th>
            <th>
              姓名
            </th>
            <th>
              年龄
            </th>
            <th>
              发放日期
            </th>
            <th>
              学校
            </th>
            <th>
              发放说明
            </th>
            <th>
              发放金额
            </th>
            <th>
              筹款状态
            </th>
            <th>
              发放状态
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @grants.each do |grant| %>
              <tr>
                <td>
                  <%= grant.grant_no %>
                </td>
                <td>
                  <%= grant.try(:apply).try(:season).try(:name) %>
                </td>
                <td>
                  <span class="btn btn-xs <%= grant.pending? ? 'yellow' : 'green' %>" title="<%= grant.pending? ? '未筹款' : '已筹款' %>"><%= grant.title %></span>
                </td>
                <td>
                  <%= grant.try(:apply_child).try(:name) %>
                </td>
                <td>
                  <%= grant.try(:apply_child).try(:age) %>
                </td>
                <td>
                  <%= grant.granted_at.strftime("%Y-%m-%d") if grant.granted_at %>
                </td>
                <td>
                  <%= grant.try(:school).try(:name) %>
                </td>
                <td>
                  <%= grant.grant_remark %>
                </td>
                <td>
                  <%= grant.amount %>
                </td>
                <td>
                  <%= grant.enum_name(:donate_state) %>
                </td>
                <td>
                  <%= grant.enum_name(:state) %>
                </td>
                <td>
                  <% if grant.pending? %>
                    <%= link_to '###', 'data-no-turbolink' => true, class: 'btn btn-xs yellow' do %>
                        <i class="fa fa-eye"></i> 去TA的分享
                    <% end %>
                  <% else %>
                    <% if grant.waiting? %>
                      <%= link_to edit_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                          <i class="fa fa-play"></i> 发放操作
                      <% end %>
                      <%= link_to edit_delay_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs green' do %>
                          <i class="fa fa-pause"></i> 暂缓发放
                      <% end %>
                      <%= link_to edit_cancel_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs red' do %>
                          <i class="fa fa-stop"></i> 取消捐助
                      <% end %>
                    <% elsif grant.granted? %>
                      <% if grant.feedback.present? %>
                        <%= link_to edit_feedback_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs green' do %>
                            <i class="fa fa-edit"></i> 修改发放反馈
                        <% end %>
                      <% else %>
                        <%= link_to new_feedback_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs green' do %>
                            <i class="fa fa-edit"></i> 新增发放反馈
                        <% end %>
                      <% end %>
                    <% elsif grant.suspend? %>
                      <%= link_to edit_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                          <i class="fa fa-play"></i> 继续发放
                      <% end %>
                    <% end %>
                  <% end %>

                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@grants) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @grants, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(function(){
        // 异步加载学校列表
        $('.schools-ajax').select2({
            language: "zh-CN",
            placeholder: '全部',
            allowClear: false,
            ajax: {
                url: "/selects/schools",
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        q: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;
                    return {
                        results: $.map(data.items, function (item) {
                            return {
                                text: item.name,
                                id: item.id
                            }
                        }),
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    };
                },
                cache: true
            }
        });
    })
</script>
