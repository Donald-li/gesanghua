<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>发放管理
    </div>
    <div class="actions">
      <%= link_to excel_output_admin_pair_grants_path, class: 'btn blue-soft', 'data-no-turbolink' => true do %>
      <span>导出</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_pair_grants_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :grant_no_or_gsh_child_name_or_gsh_child_idcard_cont, '搜索学生' %>
                <%= f.text_field :grant_no_or_gsh_child_name_or_gsh_child_idcard_cont, class: 'form-control', placeholder: '发放编号、学生信息' %>
              </div>
              <div class="form-group">
                <%= f.label :school_name_cont, '搜索学校' %>
                <%= f.text_field :school_name_cont, class: 'form-control', placeholder: '学校名称' %>
              </div>
              <div class="form-group">
                <%= f.label :state_eq, '发放状态' %>
                <%= f.select :state_eq, GshChildGrant.options_for_select(:states, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :donate_state_eq, '筹款状态' %>
                <%= f.select :donate_state_eq, GshChildGrant.options_for_select(:donate_states, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              格桑花编号
            </th>
            <th>
              姓名
            </th>
            <th>
              年龄
            </th>
            <th>
              发放时间
            </th>
            <th>
              学校
            </th>
            <th>
              发放说明
            </th>
            <th>
              发放金额
            </th>
            <th>
              筹款状态
            </th>
            <th>
              发放状态
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @grants.each do |grant| %>
              <tr>
                <td>
                  <%= grant.grant_no %>
                </td>
                <td>
                  <%= grant.try(:gsh_child).try(:name) %>
                </td>
                <td>
                  <%= grant.try(:gsh_child).try(:age) %>
                </td>
                <td>
                  <%= grant.granted_at.strftime("%Y-%m-%d") %>
                </td>
                <td>
                  <%= grant.try(:school).try(:name) %>
                </td>
                <td>
                  <%= grant.grant_remark %>
                </td>
                <td>
                  <%= grant.amount %>
                </td>
                <td>
                  <%= grant.enum_name(:donate_state) %>
                </td>
                <td>
                  <%= grant.enum_name(:state) %>
                </td>
                <td>
                  <% if grant.waiting? %>
                    <%= link_to edit_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                        <i class="fa"></i> 发放操作
                    <% end %>
                    <%= link_to edit_delay_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs green' do %>
                        <i class="fa"></i> 暂缓发放
                    <% end %>
                    <%= link_to edit_cancel_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs red' do %>
                        <i class="fa"></i> 取消捐助
                    <% end %>
                  <% elsif grant.granted? %>
                    <% if grant.feedback.present? %>
                      <%= link_to edit_feedback_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs green' do %>
                          <i class="fa"></i> 修改发放反馈
                      <% end %>
                    <% else %>
                      <%= link_to new_feedback_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs green' do %>
                          <i class="fa"></i> 新增发放反馈
                      <% end %>
                    <% end %>
                  <% else %>
                    <%= link_to edit_admin_pair_grant_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                        <i class="fa fa-edit"></i> 继续发放
                    <% end %>
                  <% end %>

                  <%#= link_to admin_pair_grant_pairedit_cancel_admin_pair_grant_students_path(grant), 'data-no-turbolink' => true, class: 'btn btn-xs yellow' do %>
                      <!-- <i class="fa fa-list-ul"></i> 查看名单（<%#= grant.grant_children.count %>） -->
                  <%# end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@grants) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @grants, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
