<div class="portlet light bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-note"></i>
      <span class="caption-subject">发放操作</span>
      <span class="caption-helper"></span>
    </div>
    <div class="actions">
      <div class="portlet-input input-inline input-small">
        <div class="input-icon right">
        </div>
      </div>
    </div>
  </div>
  <div class="portlet-body form">
    <%= simple_form_for [:admin, @grant], url: admin_pair_grant_path, wrapper: :admin_form, html: {'data-parsley-validate': true, class: 'form-horizontal grant_form'} do |f| %>
        <%= f.error_notification %>
        <div class="form-body">
          <%= static_form_control '格桑花编号：', @grant.try(:gsh_child).try(:gsh_no) %>
          <%= static_form_control '学生姓名：', @grant.try(:gsh_child).try(:name) %>
          <div class="form-group">
            <label class="col-md-2 control-label">发放时间：</label>
            <div class="col-sm-9">
              <%= f.text_field :granted_at, label: '发放日期', placeholder: '请选择发放日期', class: 'datepicker', required: true, value: Time.now %>
            </div>
          </div>
          <%= f.input :grant_person, label: '发放人：', placeholder: '请填写发放人', required: true, input_html: {value: current_user.real_name}  %>
          <%= f.input :grant_remark, label: '发放说明：', placeholder: '请填写发放说明' %>
          <div class="form-group">
            <label class="col-md-2 control-label">发放证明(最多9张)：</label>
            <div class="col-sm-9">
              <%= webuploader_tag 'image_ids[]', label: '上传发放证明图片', type: 'gsh_child_grant_image', asset: @grant.images %>
            </div>
          </div>
          <%= f.input :url, label: '报告链接：', placeholder: '发放报告链接' %>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-2 col-md-9">
              <%= f.button :submit, '提交', class: 'btn blue' %>
              <%= link_to '取消', admin_pair_grants_path, class: 'btn' %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(function(){
        initMultiImageWebuploader('.upload-wrap', null, 9);
        $('.upload-list').viewer();
    })
</script>
