<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i><%= @project.name %> > 筹款班级
    </div>
    <div class="actions">

    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_read_project_bookshelves_path(@project), class: 'form-inline' do |f| %>
            <div class="form-group">
              <%= f.label :classname_cont, '班级名称' %>
              <%= f.text_field :classname_cont, class: 'form-control', placeholder: '班级名称' %>
            </div>
            <div class="form-group">
              <%= f.label :state_eq, '全部状态' %>
              <%= f.select :state_eq, ProjectSeasonApply.options_for_select(:states, raw: true), {include_blank: '全部'}, class: 'form-control' %>
            </div>
            <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              图书角编号
            </th>
            <th>
              班级
            </th>
            <th>
              申请人数
            </th>
            <th>
              目标/已筹
            </th>
            <th>
              署名信息
            </th>
            <th>
              当前展示状态
            </th>
            <th>
              执行状态
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @bookshelves.each do |bookshelf| %>
              <tr>
                <td>
                  <%= bookshelf.bookshelf_no %>
                </td>
                <td>
                  <%= bookshelf.classname %>
                </td>
                <td>
                  <%= bookshelf.beneficial_children.present? ? bookshelf.beneficial_children.count : 0 %>
                </td>
                <td>
                  <%= number_to_currency(bookshelf.taget_amount) %> / <%= number_to_currency(bookshelf.present_amount) %>
                </td>
                <td>
                  <%= bookshelf.title %>
                </td>
                <td>
                  <%= link_to '###', data: {confirm: "确定#{bookshelf.state === 'show' ? '隐藏项目' : '显示项目'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{bookshelf.state === 'show' ? 'green' : 'default'}" do %>
                      <%= bookshelf.state === 'show' ? '对外展示' : '暂不展示' %>
                      <i class="fa <%= bookshelf.state === 'show' ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                  <% end %>
                </td>
                <td>
                  <%= bookshelf.enum_name(:state) %>
                </td>
                <td>
                  <%= link_to '###', 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改项目
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@bookshelves) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @bookshelves, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->

