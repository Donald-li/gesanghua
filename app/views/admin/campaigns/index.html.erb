<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>活动管理
    </div>
    <div class="actions">
      <%= link_to new_admin_campaign_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_campaigns_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :name_cont, '搜索' %>
            <%= f.text_field :name_cont, class: 'form-control', placeholder: '活动名称' %>
          </div>
          <div class="form-group">
            <%= f.label :id_eq, '活动ID' %>
            <%= f.text_field :id_eq, placeholder: '', class: 'form-control' %>
          </div>
          <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                活动ID
              </th>
              <th>
                活动名称
              </th>
              <th>
                活动时间
              </th>
              <th>
                报名截止
              </th>
              <th>
                活动类型
              </th>
              <th>
                是否显示
              </th>
              <th>
                活动状态
              </th>
              <th>
                报名状态
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @campaigns.each do |campaign| %>
            <tr>
              <td>
                <%= campaign.id %>
              </td>
              <td>
                <%= campaign.name %>
              </td>
              <td>
                <%= campaign.start_time.strftime('%Y-%m-%d') %>至<%= campaign.end_time.strftime('%Y-%m-%d') %>
              </td>
              <td>
                <%= campaign.sign_up_end_time.strftime('%Y-%m-%d') %>
              </td>
              <td>
                <%= campaign.campaign_category.try(:name) %>
              </td>
              <td>
                <%= link_to switch_admin_campaign_path(campaign), data: {confirm: "确定#{campaign.state === 'show' ? '隐藏该活动' : '展示该活动'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{campaign.state === 'show' ? 'green' : 'default'}" do %>
                <%= campaign.state === 'show' ? '展示' : '隐藏' %>
                <i class="fa <%= campaign.state === 'show' ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                <% end %>
              </td>
              <td>
                <!-- <%# if campaign.start_at != nil %>
                  <%# if Time.now >= campaign.start_at && Time.now <= campaign.end_at %>
                    <span class="btn btn-xs green">进行中</span>
                  <%# elsif Time.now < campaign.start_at %>
                    <span class="btn btn-xs green">未开始</span>
                  <%# elsif Time.now > campaign.end_at %>
                    <span class="btn btn-xs green">已结束</span>
                  <%# end %>
                <%# else %>
                  <span class="btn btn-xs green">未开始</span>
                <%# end %> -->
                <%= link_to switch_campaign_state_admin_campaign_path(campaign), data: {confirm: "确定#{campaign.campaign_state === 'campaign_in_process' ? '结束该活动' : '开始该活动'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs green" do %>
                <%= campaign.enum_name(:campaign_state) %>
                <% end %>
              </td>
              <td>
                <!-- <%# if campaign.sign_up_start_time != nil %>
                  <%# if Time.now >= campaign.sign_up_start_time && Time.now <= campaign.sign_up_end_time %>
                    <span class="btn btn-xs green">报名中</span>
                  <%# elsif Time.now < campaign.sign_up_start_time %>
                    <span class="btn btn-xs green">未开始报名</span>
                  <%# elsif Time.now > campaign.sign_up_end_time %>
                    <span class="btn btn-xs green">报名结束</span>
                  <%# end %>
                <%# end %> -->
                <%= link_to switch_sign_up_state_admin_campaign_path(campaign), data: {confirm: "确定#{campaign.sign_up_state === 'sign_up_in_process' ? '报名结束' : '开始报名'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs green" do %>
                <%= campaign.enum_name(:sign_up_state) %>
                <% end %>
              </td>
              <td>
                <%= link_to edit_admin_campaign_path(campaign), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 编辑
                <% end %>
                <%= link_to admin_campaign_campaign_enlists_path(campaign), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-list"></i> 报名表
                <% end %>
                <%= link_to admin_campaign_path(campaign), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                  <i class="fa fa-trash-o"></i> 删除
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@campaigns) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @campaigns, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
