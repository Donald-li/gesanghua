<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>结对学期管理
    </div>
    <div class="actions">
      <%= link_to new_admin_pair_period_path, class: 'btn blue-soft', 'data-no-turbolink' => true do %>
        <i class="icon-plus"></i>
        <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_pair_periods_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '学期名' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '学期名' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              名称
            </th>
            <th>
              中学
            </th>
            <th>
              年级
            </th>
            <th>
              学期
            </th>
            <th>
              时段
            </th>
            <th>
              状态
            </th>
            <th>
              位置
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @pair_periods.each do |period| %>
              <tr>
                <td>
                  <%= period.name %>
                </td>
                <td>
                  <%= period.enum_name(:kind) %>
                </td>
                <td>
                  <%= period.enum_name(:grade) %>
                </td>
                <td>
                  <%= period.enum_name(:semester) %>
                </td>
                <td>
                  <%= period.start_at.strftime("%Y-%m-%d") %> - <%= period.end_at.strftime("%Y-%m-%d") %>
                </td>
                <td>
                  <%= link_to switch_admin_pair_period_path(period), data: {confirm: "确定#{period.disabled? ? '启用' : '禁用'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{period.enabled? ? 'green' : 'default'}" do %>
                      <%= period.enabled? ? '启用' : '禁用' %>
                      <i class="fa <%= period.enabled? ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to '顶部', move_admin_pair_period_path(period, to: :to_top), method: :put %>
                  <%= link_to '上', move_admin_pair_period_path(period, to: :higher), method: :put %>
                  <%= link_to '下', move_admin_pair_period_path(period, to: :lower), method: :put %>
                  <%= link_to '底部', move_admin_pair_period_path(period, to: :to_bottom), method: :put %>
                </td>
                <td>
                  <%= link_to edit_admin_pair_period_path(period), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_pair_period_path(period), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@pair_periods) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @pair_periods, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
