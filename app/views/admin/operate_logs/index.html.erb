<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>操作日志
    </div>
    <div class="actions">
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_operate_logs_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :user_nickname_cont, '昵称' %>
            <%= f.text_field :user_nickname_cont, class: 'form-control gsh-input-share', placeholder: '昵称' %>
          </div>
          <div class="form-group">
            <%= f.label :created_at_gteq, '时间' %>
            <%= f.text_field :created_at_gteq, class: 'form-control datepicker gsh-input-share-l', placeholder: '开始时间' %>
            <%= f.label :created_at_lteq, '-' %>
            <%= f.text_field :created_at_lteq, class: 'form-control datepicker gsh-input-share-r', placeholder: '结束时间'%>
          </div>
          <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                操作人昵称
              </th>
              <th>
                操作记录
              </th>
              <th>
                操作时间
              </th>
            </tr>
          </thead>
          <tbody>
            <% @operate_logs.each do |log| %>
            <tr>
              <td>
                <%= log.user.nickname %>
              </td>
              <td>
                <%= log.title %>
              </td>
              <td>
                <%= l log.created_at %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@operate_logs) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @operate_logs, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
