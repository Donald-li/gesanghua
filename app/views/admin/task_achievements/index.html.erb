<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i> 任务提交
    </div>
    <div class="actions">
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_task_achievements_path, class: 'form-inline' do |f| %>
            <div class="form-group">
              <%= f.label :task_name_cont, '搜索' %>
              <%= f.text_field :task_name_cont, class: 'form-control', placeholder: '任务名称' %>
            </div>
            <div class="form-group">
              <%= f.label :finish_state_eq, '完成状态' %>
              <%= f.select :finish_state_eq, TaskVolunteer.options_for_select(:finish_states, raw: true), {include_blank: '全部'}, class: 'form-control' %>
            </div>
            <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable dropdown-select">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              编号
            </th>
            <th>
              名称
            </th>
            <th>
              计划时长（小时）
            </th>
            <th>
              任务时间
            </th>
            <th>
              地点
            </th>
            <th>
              任务类型
            </th>
            <th>
              志愿者姓名
            </th>
            <th>
              完成状态
            </th>
            <th>
              完成时间
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @task_volunteers.each do |item| %>
            <tr>
              <td>
                <%= item.task_id %>
              </td>
              <td>
                <%= item.task.try(:name) %>
              </td>
              <td>
                <%= item.task.try(:duration) %>
              </td>
              <td>
                <%= l item.task.start_time if item.task.start_time.present? %> 到 <%= l item.task.end_time if item.task.end_time.present? %>
              </td>
              <td>
                <%= item.task.try(:simple_address) %>
              </td>
              <td>
                <button class="btn btn-xs <%= item.task.normal? ? 'default' : 'green' %>"><%= item.task.enum_name(:kind) %></button>
              </td>
              <td>
                <%= item.volunteer.volunteer_name %>
              </td>
              <td>
                <%= item.enum_name(:finish_state) %>
              </td>
              <td>
                <%= l item.finish_time if item.finish_time.present? %>
              </td>
              <td>
                <%= link_to admin_task_achievement_path(item), class: 'btn btn-xs blue' do %>
                  <i class="fa fa-file"></i> 成果详情
                <% end %>
                <% if item.to_check? %>
                <%= link_to edit_admin_task_achievement_path(item), class: 'btn btn-xs blue' do %>
                  <i class="fa fa-check-square-o"></i> 成果确认
                <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@task_volunteers) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @task_volunteers, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
