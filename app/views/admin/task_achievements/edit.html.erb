<div class="portlet light bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-note"></i>
      <span class="caption-subject">审核任务</span>
      <span class="caption-helper"></span>
    </div>
    <div class="actions">
      <div class="portlet-input input-inline input-small">
        <div class="input-icon right">
        </div>
      </div>
    </div>
  </div>
  <div class="portlet-body form">
    <%= simple_form_for [:admin, @task_achievement], url: admin_task_achievement_path, wrapper: :admin_form, html: {'data-parsley-validate': true, class: 'category_form'} do |f| %>
      <%= f.error_notification %>
      <div class="form-body form-horizontal">
        <%= static_form_control '任务名称：', @task.name %>
        <%= static_form_control '志愿者姓名：', @task_achievement.volunteer.try(:user).try(:name) %>
        <%= static_form_control '成果描述：', @task_achievement.achievement_comment %>

        <div class="form-group">
          <div class="input-group">
            <p class="form-control-static" style="padding-left: 20px;">
              <% @task_achievement.images.each do |image| %>
                  <%= image_tag image.try(:file).try(:url, :small) %>
              <% end %>
            </p>
          </div>
        </div>

        <%= static_form_control '计划时长：', @task.duration %>
        <div class="form-group approve_reject">
          <label class="col-md-2 control-label">实发时长：</label>
          <div class="col-sm-9">
            <input type="number" name="duration">
          </div>
        </div>
        <div class="form-group approve_reject">
          <label class="col-md-2 control-label">备注：</label>
          <div class="col-sm-9">
            <textarea name="comment" class="form-control text"></textarea>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <div class="row">
          <div class="col-md-offset-2 col-md-9">
            <%= f.button :submit, '提交', class: 'btn blue' %>
            <%= link_to '取消', admin_task_achievements_path, class: 'btn' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
