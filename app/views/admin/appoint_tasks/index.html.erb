<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i> 指派任务列表
    </div>
    <div class="actions">
      <%= link_to new_admin_appoint_task_path, class: 'btn blue-soft', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>指派任务</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_appoint_tasks_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '搜索' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '任务名称' %>
              </div>
              <div class="form-group">
                <%= f.label :state_eq, '任务状态' %>
                <%= f.select :state_eq, Task.options_for_some_select(:states, ['pick_done', 'doing', 'done'], raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              编号
            </th>
            <th>
              名称
            </th>
            <th>
              服务时长（小时）
            </th>
            <th>
              负责人
            </th>
            <th>
              任务时间
            </th>
            <th>
              地点
            </th>
            <th>
              任务状态
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @tasks.each do |task| %>
              <tr>
                <td>
                  <%= task.id %>
                </td>
                <td>
                  <%= task.name %>
                </td>
                <td>
                  <%= task.duration %>
                </td>
                <td>
                  <%= task.volunteers.first.try(:user).try(:name) %>
                </td>
                <td>
                  开始时间：<br><%= l task.start_time if task.start_time.present? %> <br>
                  结束时间：<br><%= l task.end_time if task.end_time.present? %>
                </td>
                <td>
                  <%= task.simple_address %>
                </td>
                <td>
                  <%= task.enum_name(:state) %>
                </td>
                <td>
                  <%= link_to switch_edit_admin_appoint_task_url(task), class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 移交任务
                  <% end %>
                  <%= link_to edit_admin_appoint_task_url(task), class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_appoint_task_url(task), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@tasks) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @tasks, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
