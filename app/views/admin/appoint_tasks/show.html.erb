<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>工作名单
    </div>
    <div class="actions">
      <a href="<%= admin_appoint_tasks_path %>" class="btn btn-xs blue">
        <i class="fa fa-reply"></i> 返回
      </a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <td>
              姓名
            </td>
            <td>
              联系方式
            </td>
            <td>
              地区
            </td>
            <td>
              计划时长（小时）
            </td>
            <td>
              认证时间
            </td>
          </tr>
          </thead>
          <tbody>
          <% @task_volunteers.each do |apply| %>
            <tr>
              <td>
                <%= apply.volunteer.try(:user).try(:name) %>
              </td>
              <td>
                <%= apply.volunteer.try(:user).try(:phone) %>
              </td>
              <td>
                <%= apply.volunteer.try(:user).try(:simple_address) %>
              </td>
              <td>
                <%= apply.volunteer.try(:duration) %>
              </td>
              <td>
                <%= l apply.volunteer.approve_time if apply.volunteer.approve_time.present? %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@task_volunteers) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @task_volunteers, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
