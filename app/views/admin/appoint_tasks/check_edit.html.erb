<div class="portlet light bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-note"></i>
      <span class="caption-subject">审核任务</span>
      <span class="caption-helper"></span>
    </div>
    <div class="actions">
      <div class="portlet-input input-inline input-small">
        <div class="input-icon right">
        </div>
      </div>
    </div>
  </div>
  <div class="portlet-body form">
    <%= simple_form_for [:admin, @task],  url: check_update_admin_appoint_task_path, method: :put, wrapper: :admin_form, html: {'data-parsley-validate': true, class: 'category_form'} do |f| %>
        <%= f.error_notification %>
        <div class="form-body form-horizontal">
          <%= static_form_control '任务名称：', @task.name %>
          <%= static_form_control '志愿者姓名：', @task.volunteers.try(:first).try(:user).try(:name) %>
          <%= static_form_control '成果描述：', @task.task_volunteers.try(:first).try(:achievement_comment) %>
          <%= static_form_control '计划时长：', @task.duration %>
          <div class="form-group approve_reject">
            <label class="col-md-2 control-label">实发时长：</label>
            <div class="col-sm-9">
              <input type="number" name="duration">
            </div>
          </div>
          <div class="form-group approve_reject">
            <label class="col-md-2 control-label">备注：</label>
            <div class="col-sm-9">
              <textarea name="comment" class="form-control text"></textarea>
            </div>
          </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-2 col-md-9">
              <%= f.button :submit, '提交', class: 'btn blue' %>
              <%= link_to '取消', admin_appoint_tasks_path, class: 'btn' %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
