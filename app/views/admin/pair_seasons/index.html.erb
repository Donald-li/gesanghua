<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>批次管理
    </div>
    <div class="actions">
      <%= link_to new_admin_pair_season_path, class: 'btn blue-soft', 'data-no-turbolink' => true do %>
        <i class="icon-plus"></i>
        <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_pair_seasons_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '批次名称' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '可根据批次名称搜索' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              批次名称
            </th>
            <th>
              初中/学期
            </th>
            <th>
              初中/学年
            </th>
            <th>
              高中/学期
            </th>
            <th>
              高中/学年
            </th>
            <th width="230px">
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @seasons.each do |season| %>
              <tr>
                <td>
                  <%= season.name %>
                </td>
                <td>
                  ￥<%= season.junior_term_amount %>
                </td>
                <td>
                  ￥<%= season.junior_year_amount %>
                </td>
                <td>
                  ￥<%= season.senior_term_amount %>
                </td>
                <td>
                  ￥<%= season.senior_year_amount %>
                </td>
                <td style="display: none">
                  <%= link_to switch_admin_pair_season_path(season), data: {confirm: "确定#{season.disabled? ? '设置为可用年度' : '禁用'}吗？"}, method: :put, 'data-no-turbolink' => true, class: "btn btn-xs #{season.enabled? ? 'green' : 'default'}" do %>
                      <%= season.enabled? ? '可用年度' : '禁用' %>
                      <i class="fa <%= season.enabled? ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_admin_pair_season_path(season), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_pair_season_path(season), class: 'btn btn-xs red', method: :delete, data: {confirm: '删除本年度，将会同时删除本年度下的所有申请记录，确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@seasons) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @seasons, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
