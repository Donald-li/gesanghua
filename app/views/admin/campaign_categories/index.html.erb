<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>活动分类管理
    </div>
    <div class="actions">
      <%= link_to new_admin_campaign_category_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
      <i class="icon-plus"></i>
      <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_campaign_categories_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :name_cont, '搜索' %>
            <%= f.text_field :name_cont, class: 'form-control', placeholder: '活动分类名称' %>
          </div>
          <div class="form-group">
            <%= f.label :id_eq, '活动分类ID' %>
            <%= f.text_field :id_eq, placeholder: '', class: 'form-control' %>
          </div>
          <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                活动分类ID
              </th>
              <th>
                活动分类名称
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @campaign_categories.each do |campaign_category| %>
            <tr>
              <td>
                <%= campaign_category.id %>
              </td>
              <td>
                <%= campaign_category.name %>
              </td>
              <td>
                <%= link_to edit_admin_campaign_category_path(campaign_category), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                  <i class="fa fa-edit"></i> 编辑
                <% end %>
                <%= link_to admin_campaign_category_path(campaign_category), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                  <i class="fa fa-trash-o"></i> 删除
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@campaign_categories) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @campaign_categories, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
