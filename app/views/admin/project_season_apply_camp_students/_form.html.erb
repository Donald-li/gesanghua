<%= simple_form_for [:admin, @camp_student], url: @camp_student.new_record? ? admin_project_season_apply_camp_students_path(apply_camp_id: @apply_camp.id) : admin_project_season_apply_camp_student_path(apply_camp_id: @apply_camp.id), wrapper: :admin_form, html: {class: 'form-horizontal project_form', 'data-parsley-validate': true} do |f| %>
  <%= f.error_notification %>
  <div class="form-body form-horizontal">
    <%= f.input :name, label: '姓名：', placeholder: '', required: true %>
    <%= f.input :id_card, label: '身份证号：', placeholder: '', required: true %>
    <%= f.input :nation, as: :select, collection: ProjectSeasonApplyCampMember.options_for_enum_select(:nations), include_blank: false, label: '民族：', placeholder: '' %>
    <%= f.input :level, as: :select, collection: ProjectSeasonApplyCampMember.options_for_enum_select(:levels), include_blank: false, label: '教育阶段：', placeholder: '' %>
    <%= f.input :grade, as: :select, collection: ProjectSeasonApplyCampMember.options_for_enum_select(:grades), include_blank: false, label: '年级：', placeholder: '' %>
    <%= f.input :height, label: '身高：', placeholder: '' %>
    <%= f.input :weight, label: '体重：', placeholder: '' %>
    <%= f.input :guardian_name, label: '监护人：', placeholder: '' %>
    <%= f.input :guardian_id_card, label: '监护人身份证号：', placeholder: '' %>
    <%= f.input :guardian_phone, label: '联系方式：', placeholder: '' %>
    <%= f.input :guardian_relation, as: :select, collection: ['父子', '母子', '父女', '母女', '祖孙', '舅甥', '其他'], label: '与其关系：', include_blank: false %>

    <div class="form-group">
      <label class="col-md-2 control-label">安全协议：</label>
      <div class="col-sm-9">
        <%= webuploader_tag :image_id, label: '安全协议', type: 'camp_protocol_image', asset: @camp_student.image, klass: 'single' %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <div class="row">
      <div class="col-md-offset-2 col-md-9">
        <%= f.button :submit, '提交', class: 'btn blue' %>
        <%= link_to '取消', request.referer, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>
<script>
  $(function () {
      initImageWebuploader($('#webuploader'));
  })
</script>
