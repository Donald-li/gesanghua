<%= simple_form_for [:admin, @camp_document_finance], wrapper: :admin_form, html: {data: {'parsley-validate': true}} do |f| %>
    <%= f.error_notification %>
    <div class="form-body form-horizontal">
      <%= f.input :item, label: '费用类别：', autofocus: true, input_html: { readonly: !@camp_document_finance.new_record?, data: {'parsley-required': true}} %>
      <%= f.input :budge, label: '预计花费：', input_html: { data: {'parsley-number': true}} %>
      <%= f.input :amount, label: '实际花费：', input_html: { data: {'parsley-number': true}} %>
      <%= f.input :remark, as: :text, label: '备注：' %>
    </div>
    <div class="form-actions">
      <div class="row">
        <div class="col-md-offset-3 col-md-9">
          <%= f.button :submit, '提交', class: 'btn green' %>
          <%= link_to '取消', admin_camp_document_finances_path, class: 'btn' %>
        </div>
      </div>
    </div>
<% end %>
<script>
  $(function(){
    initImageWebuploader($('#webuploader'));
  })
</script>
