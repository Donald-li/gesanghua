<div class="portlet light bordered">
  <div class="portlet-title">
    <!-- <div class="caption">
      <i class="icon-note">审核操作</i>
      <span class="caption-subject"></span>
      <span class="caption-helper"></span>
    </div> -->
    <div class="actions">
      <div class="btn-group">
        <a href="<%= admin_read_applies_path %>" class="btn btn-xs blue">
          <i class="fa fa-reply"></i>返回
        </a>
      </div>
    </div>
  </div>
  <div class="portlet-body form">

    <div class="form-body form-horizontal">
      <div class="row">
        <div class="col-md-12">
          <div class="tabbable-line boxless tabbable-reversed">
            <ul class="nav nav-tabs">
              <li class="">
                <a href="<%= edit_admin_read_apply_path(@project_apply) %>"> 申请资料 </a>
              </li>
              <li class="active">
                <a href="#tab_1" data-toggle="tab" aria-expanded="false"> 审核申请 </a>
              </li>
              <li class="">
                <% if @project_apply.bookshelves.present? %>
                  <% project_season_apply_bookshelf_id = @project_apply.bookshelves.first.id %>
                  <a href="<%= students_admin_read_apply_path(@project_apply, q: {project_season_apply_bookshelf_id_eq: project_season_apply_bookshelf_id}) %>" > 受益学生 </a>
                <% else %>
                  <a href="###" > 受益学生 </a>
                <% end %>
              </li>
            </ul>
            <div class="tab-content">
              <div class="portlet-body">
                <div class="table-scrollable">
                  <table class="table table-bordered table-hover">
                    <tbody>
                    <tr>
                      <th width="72px">
                        审核状态
                      </th>
                      <th>
                        <span id="check_state"><%= @audit.enum_name(:state) %></span>
                      </th>
                    </tr>
                    <tr>
                      <th>
                        审核评语
                      </th>
                      <th>
                        <span id="check_comment"><%= @audit.comment %></span>
                      </th>
                    </tr>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="form-actions">
                <div class="row">
                  <div class="col-md-offset-2 col-md-9">
                    <!-- <a class="btn blue" data-toggle="modal" data-target="#myModal_update" href="#responsive"> 修改审核信息 </a> -->
                    <a class="btn blue" data-toggle="modal" data-target="#myModal_create" href="#responsive"> 审核 </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="modal fade" id="myModal_create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= simple_form_for [:admin, @project_apply, @new_audit], url: create_audit_admin_read_applies_path, remote: true, wrapper: :admin_form, html: {'data-parsley-validate': true} do |f| %>
      <%= f.error_notification %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">审核信息</h4>
      </div>
      <div class="modal-body">
        <div class="portlet-body form">
          <div class="form-body form-horizontal">
            <%= f.hidden_field :apply_id, value: params[:id] %>
            <%= f.input :state, as: :radio_buttons, wrapper: :inline_inputs, collection: Audit.options_for_some_select(:states), label: '审核：', required: true%>
            <%= f.input :comment, label: '评语：', placeholder: '请填写评语' %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
        <button type="submit" class="btn btn-primary" >提交审核</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
