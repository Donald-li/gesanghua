<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i> 服务历史
    </div>
    <div class="actions">
      <div class="btn-group">
        <a href="<%= admin_volunteers_path %>" class="btn btn-default">
          <i class="fa fa-reply"></i>返回
        </a>
      </div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              编号
            </th>
            <th>
              任务名称
            </th>
            <th>
              获得时长（小时）
            </th>
            <th>
              任务时间
            </th>
            <th>
              地点
            </th>
            <th>
              任务完成时间
            </th>
            <th>
              备注
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @service_histories.each do |history| %>
              <tr>
                <td>
                  <%= history.id %>
                </td>
                <td>
                  <%= history.task.try(:name) %>
                </td>
                <td>
                  <%= history.duration %>
                </td>
                <td>
                  开始时间：<%= l history.task.start_time if history.task.start_time.present? %> <br>
                  结束时间：<%= l history.task.end_time if history.task.end_time.present? %>
                </td>
                <td>
                  <%= history.task.try(:simple_address) %>
                </td>
                <td>
                  <%= l history.finish_time if history.finish_time.present? %>
                </td>
                <td>
                  <%= history.comment %>
                </td>
                <td>
                  <%= link_to admin_volunteer_service_history_url(@volunteer, history), class: 'btn btn-xs blue' do %>
                      <i class="fa fa-file"></i> 任务详情
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@service_histories) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @service_histories, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
