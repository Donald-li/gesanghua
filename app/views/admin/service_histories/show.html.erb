
<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-sliders font-dark"></i>
      <span class="caption-subject font-dark bold uppercase">任务详情</span>
    </div>
    <div class="actions">
      <div class="btn-group">
        <a href="<%= admin_volunteer_service_histories_path(@volunteer) %>" class="btn btn-xs blue">
          <i class="fa fa-reply"></i>返回
        </a>
      </div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-bordered table-hover">
        <tbody>
        <tr>
          <td width="72px">
            任务名称
          </td>
          <td>
            <%= @task.name %>
          </td>
        </tr>
        <tr>
          <td>
            时长
          </td>
          <td>
            <%= @task.duration %>
          </td>
        </tr>
        <tr>
          <td>
            内容
          </td>
          <td>
            <%= @task.content.html_safe %>
          </td>
        </tr>
        <tr>
          <td>
            需要人数
          </td>
          <td>
            <%= @task.num %>
          </td>
        </tr>
        <tr>
          <td>
            地区
          </td>
          <td>
            <%= @task.workplace.try(:title) %>
          </td>
        </tr>
        <tr>
          <td>
            任务时间
          </td>
          <td>
            开始时间：<%= l @task.start_time if @task.start_time.present? %> <br>
            结束时间：<%= l @task.end_time if @task.end_time.present? %>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
