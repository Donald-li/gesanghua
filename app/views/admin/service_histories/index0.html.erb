<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i> 服务历史
    </div>
    <div class="actions">

    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_volunteer_service_histories_path(@volunteer), class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '搜索' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '任务名称' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              编号
            </th>
            <th>
              名称
            </th>
            <th>
              服务时长（小时）
            </th>
            <th>
              任务时间
            </th>
            <th>
              地点
            </th>
            <th>
              任务状态
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @service_histories.each do |history| %>
              <tr>
                <td>
                  <%= history.id %>
                </td>
                <td>
                  <%= history.name %>
                </td>
                <td>
                  <%= history.duration %>
                </td>
                <td>
                  yiyiyi
                </td>
                <td>
                  <%= history.simple_address %>
                </td>
                <td>
                  <%= history.enum_name(:state) %>
                </td>
                <td>
                  <%= link_to admin_volunteers_service_history_url(@volunteer, history), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@service_histories) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @service_histories, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
