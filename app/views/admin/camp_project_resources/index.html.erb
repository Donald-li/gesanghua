<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>探索营 > 资源管理
    </div>
    <div class="actions">
      <%= link_to new_admin_camp_project_resource_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-6 col-sm-12">
            <%= search_form_for @search, url: admin_camp_project_resources_path, class: 'form-inline' do |f| %>
            <div class="form-group">
              <%= f.label :camp_name_cont, '探索营名称' %>
              <%= f.text_field :camp_name_cont, class: 'form-control gsh-input-share' %>
            </div>
            <div class="form-group">
              <%= f.label :company_cont, '单位' %>
              <%= f.text_field :company_cont, class: 'form-control gsh-input-share' %>
            </div>
            <div class="form-group">
              <%= f.label :resource_cont, '资源' %>
              <%= f.text_field :resource_cont, class: 'form-control gsh-input-share' %>
            </div>
            <button type="submit" class="btn btn-default grey">搜索</button>
            <% end %>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              探索营名称
            </th>
            <th>
              单位名称
            </th>
            <th>
              资源
            </th>
            <th>
              资源联系人
            </th>
            <th>
              联系电话
            </th>
            <th>
              格桑花对接人
            </th>
            <th>
              联系电话
            </th>
            <th>
              资源说明
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @camp_project_resources.each do |camp_project_resource| %>
              <tr>
                <td>
                  <%= camp_project_resource.camp.name %>
                </td>
                <td>
                  <%= camp_project_resource.company %>
                </td>
                <td>
                  <%= camp_project_resource.resource %>
                </td>
                <td>
                  <%= camp_project_resource.contact_name %>
                </td>
                <td>
                  <%= camp_project_resource.contact_phone %>
                </td>
                <td>
                  <%= camp_project_resource.gsh_contact_name %>
                </td>
                <td>
                  <%= camp_project_resource.gsh_contact_phone %>
                </td>
                <td>
                  <%= camp_project_resource.remark %>
                </td>
                <td>
                  <%= link_to edit_admin_camp_project_resource_path(camp_project_resource), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to admin_camp_project_resource_path(camp_project_resource), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@camp_project_resources) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @camp_project_resources, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
