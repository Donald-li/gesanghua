<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i> 结对项目 的捐助记录
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: admin_pair_donate_records_path, class: 'form-inline' do |f| %>
          <div class="form-group">
            <%= f.label :title_cont, '搜索收入' %>
            <%= f.text_field :user_name_or_user_phone_cont, class: 'form-control', placeholder: '捐助人姓名、捐助人手机号' %>
          </div>
          <div class="form-group">
            <%= f.label '捐助时间' %>
            <%= f.text_field :created_at_gteq, class: 'form-control datepicker', placeholder: '开始时间' %>
            <%= f.text_field :created_at_lteq, class: 'form-control datepicker', placeholder: '结束时间' %>
          </div>
          <button type="submit" class="btn btn-default grey">查询</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>
                收入单号
              </th>
              <th>
                受捐人
              </th>
              <th>
                捐款人
              </th>
              <th>
                代捐人/汇款人
              </th>
              <th>
                捐助时间
              </th>
              <th>
                捐助金额
              </th>
              <th>
                捐助平台
              </th>
              <th>
                操作
              </th>
            </tr>
          </thead>
          <tbody>
            <% @donate_records.each do |record| %>
            <tr>
              <td>
                <%= record.id %>
              </td>
              <td>
                <%= record.project_season_apply_child.name %>
              </td>
              <td>
                <%= record.user.name %> ( <%= record.user.phone %> )
              </td>
              <td>
                <%= record.donor %> / <%= record.remitter_name %>
              </td>
              <td>
                <%= l record.created_at %>
              </td>
              <td>
                <%= record.amount %>
              </td>
              <td>
                <%= record.income_record.income_source.name if record.income_record.present? %>
              </td>
              <td>
                <%= link_to admin_pair_donate_record_path(record), class: 'btn btn-xs blue' do %>
                  <i class="fa fa-eye"></i> 查看详情
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@donate_records) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @donate_records, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
