<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i> <%= link_to @apply.name, camp_projects_path %> > 探索营配额
    </div>
    <div class="actions">
      <%= link_to new_camp_project_project_season_apply_camp_path(@apply), class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: camp_project_project_season_apply_camps_path(@apply), class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :school_name_cont, '学校名称' %>
                <%= f.text_field :school_name_cont, class: 'form-control', placeholder: '名称' %>
              </div>
              <div class="form-group">
                <%= f.label :execute_state_eq, '状态' %>
                <%= f.select :execute_state_eq, ProjectSeasonApplyCamp.options_for_select(:execute_states, raw: true), {include_blank: '全部'}, class: 'form-control' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right"></div>
        </div>
      </div>
      <div class="table-scrollable dropdown-select">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              学校编号
            </th>
            <th>
              学校名称
            </th>
            <th>
              学生数量
            </th>
            <th>
              陪同老师
            </th>
            <th>
              探索营联系老师
            </th>
            <th>
              联系方式
            </th>
            <th>
              状态
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @apply_camps.each do |camp| %>
              <tr>
                <td>
                  <%= camp.school.try(:school_no) %>
                </td>
                <td>
                  <%= camp.school.try(:name) %>
                </td>
                <td>
                  <%= camp.student_number %>
                </td>
                <td>
                  <%= camp.teacher_number %>
                </td>
                <td>
                  <%= camp.teacher.try(:name) %>
                </td>
                <td>
                  <%= camp.teacher.try(:phone) %>
                </td>
                <td>
                  <div class="btn-group">
                    <a class="btn btn-xs blue dropdown-toggle" data-toggle="dropdown" href="javascript:;" aria-expanded="false">
                      <i class="fa fa-circle-o-notch"></i>
                      <%= camp.enum_name(:execute_state) %>
                      <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to switch_camp_project_project_season_apply_camp_path(@apply, camp, execute_state: 'to_submit'), method: :put, data: {confirm: '确定标记为待提交名单吗？'} do %>
                            待提交名单
                            <% if camp.to_submit? %>
                                <span class="badge badge-success"> <i class="fa fa-check"></i> </span>
                            <% end %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to switch_camp_project_project_season_apply_camp_path(@apply, camp, execute_state: 'to_approve'), method: :put, data: {confirm: '确定标记为待审核吗？'} do %>
                            待审核
                            <% if camp.to_approve? %>
                                <span class="badge badge-success"> <i class="fa fa-check"></i> </span>
                            <% end %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to switch_camp_project_project_season_apply_camp_path(@apply, camp, execute_state: 'approved'), method: :put, data: {confirm: '确定标记为审核完成吗？'} do %>
                            审核完成
                            <% if camp.approved? %>
                                <span class="badge badge-success"> <i class="fa fa-check"></i> </span>
                            <% end %>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
                <td>
                  <% unless camp.approved? %>
                      <%= link_to edit_camp_project_project_season_apply_camp_path(@apply, camp), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                          <i class="fa fa-edit"></i> 修改
                      <% end %>
                      <%= link_to camp_project_project_season_apply_camp_path(@apply, camp), class: 'btn btn-xs red', method: :delete, data: {confirm: '删除该配额，将会同时删除本配额下的申请信息，确定要删除吗？'} do %>
                          <i class="fa fa-trash-o"></i> 删除
                      <% end %>
                      <%= link_to camp_project_season_apply_camp_students_path(apply_camp_id: camp.id), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                          <i class="fa fa-list"></i> 学生名单
                      <% end %>
                      <%= link_to camp_project_season_apply_camp_teachers_path(apply_camp_id: camp.id), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                          <i class="fa fa-list"></i> 教师名单
                      <% end %>
                  <% else %>
                      <%= link_to camp_member_camp_project_project_season_apply_camp_path(@apply, camp), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                          <i class="fa fa-list"></i> 成员名单
                      <% end %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@apply_camps) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @apply_camps, theme: '' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
