<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i><%= @current_apply.name %> > 志愿者名单
    </div>
    <div class="actions">
      <%= link_to camp_applies_path(return_apply: controller_path), class: 'btn btn-xs green', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>切换探索营</span>
      <% end %>
      <%= link_to new_camp_camp_document_volunteer_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              用户ID
            </th>
            <th>
              志愿者姓名
            </th>
            <th>
              联系电话
            </th>
            <th>
              任务备注
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @camp_document_volunteers.each do |camp_document_volunteer| %>
              <tr>
                <td>
                  <%= camp_document_volunteer.volunteer.try(:volunteer_no) %>
                </td>
                <td>
                  <%= camp_document_volunteer.volunteer.try(:name) %>
                </td>
                <td>
                  <%= camp_document_volunteer.volunteer.try(:user).try(:phone) %>
                </td>
                <td>
                  <%= camp_document_volunteer.remark %>
                </td>
                <td>
                  <%= link_to edit_camp_camp_document_volunteer_path(camp_document_volunteer), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to camp_camp_document_volunteer_path(camp_document_volunteer), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@camp_document_volunteers) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @camp_document_volunteers, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
