<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i><%= @current_apply.name %> > 决算管理
    </div>
    <div class="actions">
      <%= link_to camp_applies_path(return_apply: controller_path), class: 'btn btn-xs green', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>切换探索营</span>
      <% end %>
      <%= link_to new_camp_camp_document_finance_path, class: 'btn btn-xs blue', 'data-no-turbolink' => true do %>
          <i class="icon-plus"></i>
          <span>新增</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="body-info">
      预计花费合计： <%= number_to_currency @search.result.sum(:budge) %> &nbsp;&nbsp;&nbsp;&nbsp;
      实际花费合计： <%= number_to_currency @search.result.sum(:amount) %>
    </div>
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              费用类别
            </th>
            <th>
              预计花费
            </th>
            <th>
              实际花费
            </th>
            <th>
              备注
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @camp_document_finances.each do |camp_document_finance| %>
              <tr>
                <td>
                  <%= camp_document_finance.item %>
                </td>
                <td>
                  <%= number_to_currency camp_document_finance.budge %>
                </td>
                <td>
                  <%= number_to_currency camp_document_finance.amount %>
                </td>
                <td>
                  <%= camp_document_finance.remark %>
                </td>
                <td>
                  <%= link_to edit_camp_camp_document_finance_path(camp_document_finance), 'data-no-turbolink' => true, class: 'btn btn-xs blue' do %>
                      <i class="fa fa-edit"></i> 修改
                  <% end %>
                  <%= link_to camp_camp_document_finance_path(camp_document_finance), class: 'btn btn-xs red', method: :delete, data: {confirm: '确定要删除吗？'} do %>
                      <i class="fa fa-trash-o"></i> 删除
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@camp_document_finances) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @camp_document_finances, theme: 'admin' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
